<div class="min-h-screen bg-[#0F172A]">
  <main>
    <section class="py-16 sm:py-24 bg-[#0F172A] text-white relative overflow-hidden">
      <div class="container mx-auto px-4 relative">
        <div class="max-w-6xl mx-auto">
          <div class="bg-[#1E293B]/80 backdrop-blur-sm px-6 py-8 border border-yellow-500/20 rounded-xl shadow-[0_0_30px_rgba(234,179,8,0.1)]">
            <div class="flex justify-between items-center mb-6">
              <div>
                <h1 class="font-bold text-2xl text-gray-100">Bulk WordPress Generation</h1>
                <p class="text-base text-gray-400 mt-2">Select keywords to generate WordPress content in bulk.</p>
              </div>
              <%= link_to app_keywords_path, class: "text-gray-400 hover:text-gray-300 transition-colors" do %>
                <i data-lucide="x" class="h-5 w-5"></i>
              <% end %>
            </div>
            <%= tag.div(flash[:alert], class: "mb-4 text-red-400") if flash[:alert] %>
            <%= tag.div(flash[:notice], class: "mb-4 text-green-400") if flash[:notice] %>

            <%= form_with url: app_bulk_wordpress_content_generations_path, method: :post, class: "space-y-6", data: { controller: "bulk-generation" } do |f| %>
              <!-- CTA URL Field -->
              <div>
                <label class="block text-sm font-medium text-gray-300 mb-2">Call-to-Action URL</label>
                <input type="url" name="cta_url" placeholder="https://yourwebsite.com/product" value="<%= @selected_cta_url %>" required class="block w-full px-4 py-3 rounded-lg bg-[#1E293B]/50 border border-yellow-500/30 text-gray-100 placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-yellow-500 focus:border-transparent transition-colors" />
                <p class="mt-1 text-sm text-gray-400">The URL where you want to drive traffic. AI will naturally incorporate this into each generated post.</p>
              </div>

              <!-- Prompt Selection -->
              <div>
                <div class="flex items-center justify-between mb-3">
                  <label class="block text-sm font-medium text-gray-300">AI Prompt</label>
                  <%= link_to new_app_prompt_path, 
                      class: "text-sm text-yellow-400 hover:text-yellow-300 transition-colors" do %>
                    <i data-lucide="plus" class="h-4 w-4 inline mr-1"></i>
                    Create New Prompt
                  <% end %>
                </div>

                <%= turbo_frame_tag "prompt_form" do %>
                  <!-- replaced by prompt new/edit -->
                <% end %>

                <%= turbo_frame_tag "prompt_selection", data: { turbo_permanent: true } do %>
                  <% wordpress_prompts = Current.user.prompts.where(target: 'wordpress') %>
                  <% if wordpress_prompts.any? %>
                    <div class="space-y-3">
                      <% wordpress_prompts.each do |prompt| %>
                        <div class="relative">
                          <input type="radio" name="prompt_id" value="<%= prompt.id %>" id="prompt_<%= prompt.id %>" class="peer sr-only" <%= 'checked' if defined?(@selected_prompt_id) && @selected_prompt_id.to_i == prompt.id %>>
                          <label for="prompt_<%= prompt.id %>" class="flex p-4 border-2 border-yellow-500/30 rounded-lg cursor-pointer transition-all hover:border-yellow-500/50 peer-checked:border-yellow-500 peer-checked:bg-yellow-500/10 peer-checked:shadow-[0_0_15px_rgba(234,179,8,0.2)]">
                            <div class="flex-grow">
                              <div class="flex items-center justify-between mb-2">
                                <div class="text-sm font-medium text-gray-300">WordPress Prompt</div>
                                <%= link_to edit_app_prompt_path(prompt), 
                                    class: "text-yellow-400 hover:text-yellow-300 transition-colors",
                                    data: { turbo_frame: "prompt_form" }, title: "Edit" do %>
                                  <i data-lucide="edit-3" class="h-4 w-4"></i>
                                <% end %>
                              </div>
                              <div class="text-xs text-green-400 font-medium mb-1">USER PROMPT</div>
                              <div class="text-sm text-gray-400 mb-2"><%= truncate(prompt.user_prompt, length: 120) %></div>
                              <div class="text-xs text-purple-400 font-medium mb-1">SYSTEM PROMPT</div>
                              <div class="text-sm text-gray-400"><%= truncate(prompt.system_prompt, length: 100) %></div>
                            </div>
                          </label>
                        </div>
                      <% end %>
                    </div>
                  <% else %>
                    <div class="text-center py-6 border-2 border-dashed border-yellow-500/30 rounded-lg">
                      <i data-lucide="message-square" class="h-8 w-8 text-yellow-400 mx-auto mb-2"></i>
                      <p class="text-gray-400 text-sm">No WordPress prompts found</p>
                      <p class="text-gray-500 text-xs mt-1">Create a prompt to customize AI content generation</p>
                    </div>
                  <% end %>
                <% end %>

                <p class="mt-2 text-sm text-gray-400">Choose or create a prompt to customize how AI generates your content.</p>
              </div>

              <!-- AI Model Selection -->
              <div>
                <label class="block text-sm font-medium text-gray-300 mb-2">AI Model</label>
                <%= f.select :ai_model, options_for_select(@available_models, @selected_ai_model), { include_blank: "Select Model" }, { 
                    data: { controller: "choices-select" } } %>
                <p class="-mt-4 text-sm text-gray-400">The AI model to use for generating the content.</p>
              </div>

              <!-- Keyword List -->
              <div class="bg-[#0F172A]/50 border border-yellow-500/20 rounded-lg p-4 max-h-[400px] overflow-y-auto" data-bulk-generation-target="keywordsContainer">
                <div class="flex items-center mb-3">
                  <input type="checkbox" id="select_all" data-bulk-generation-target="selectAll" class="h-4 w-4 text-yellow-500 focus:ring-yellow-500 border-gray-300 rounded mr-2" data-action="change->bulk-generation#toggleSelectAll" />
                  <label for="select_all" class="text-sm text-gray-300">Select All Keywords</label>
                </div>
                <% @keywords.each do |keyword| %>
                  <div class="flex items-center py-1">
                    <input type="checkbox" name="keyword_ids[]" value="<%= keyword.id %>" id="kw_<%= keyword.id %>" class="h-4 w-4 text-yellow-500 focus:ring-yellow-500 border-gray-300 rounded mr-3" data-action="change->bulk-generation#toggleKeyword" <%= 'checked' if defined?(@selected_keyword_ids) && @selected_keyword_ids.include?(keyword.id) %> />
                    <label for="kw_<%= keyword.id %>" class="text-sm text-gray-100"><%= keyword.name %></label>
                  </div>
                <% end %>
              </div>
              <p class="-mt-3 text-sm text-gray-400">Select the keywords you want to generate content for.</p>

              <!-- WordPress Website Selection -->
              <div>
                <label class="block text-sm font-medium text-gray-300 mb-2">WordPress Website</label>
                <%= f.select :wordpress_website_id, options_for_select(Current.user.wordpress_websites.map { |w| [w.url, w.id] }, @selected_wordpress_website_id), { include_blank: "Select Website" }, class: "block w-full px-4 py-3 rounded-lg bg-gray-700/50 border border-gray-600 text-gray-100 focus:outline-none focus:ring-2 focus:ring-yellow-500" %>
                <p class="mt-2 text-sm text-gray-400">The WordPress website where the generated content will be published.</p>
              </div>

              <!-- Submit -->
              <div class="pt-4">
                <%= f.submit "Generate WordPress Content", class: "group relative inline-block px-6 py-3 bg-gradient-to-r from-yellow-500 to-red-500 text-white rounded-md font-semibold transition-all duration-200 hover:shadow-[0_0_20px_rgba(234,179,8,0.3)] disabled:opacity-50", data: { bulk_generation_target: "submit" } %>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </section>
  </main>
</div> 