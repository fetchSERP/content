                        <span class="text-gray-300">Published:</span>
                        <span class="text-green-400 font-medium"><%= Current.user.social_media_contents.where(status: 'published').count %></span>
                      </div>
                      <div class="flex justify-between items-center text-sm">
                        <span class="text-gray-300">Drafts:</span>
                        <span class="text-yellow-400 font-medium"><%= Current.user.social_media_contents.where(status: 'draft').count %></span>
                      </div>
                    </div>
                  </div>
                  <div class="mt-4 space-y-2">
                    <%= link_to app_social_media_contents_path, class: "block w-full px-4 py-2 bg-sky-500/10 border border-sky-500/30 rounded-lg text-sky-400 hover:bg-sky-500/20 transition-colors text-center" do %>
                      <i data-lucide="list" class="h-4 w-4 inline mr-2"></i>
                      Manage Posts
                    <% end %>
                    <%= link_to new_app_social_media_content_path(platform: 'linkedin'), class: "block w-full px-4 py-2 bg-gradient-to-r from-yellow-500 to-red-500 text-white rounded-lg font-semibold transition-all duration-200 hover:shadow-[0_0_20px_rgba(234,179,8,0.3)] text-center" do %>
                      <i data-lucide="plus" class="h-4 w-4 inline mr-2"></i>
                      Create Post
                    <% end %>
                  </div>
                </div>

                <!-- X Content -->
                <div class="flex flex-col h-full bg-[#1E293B]/80 backdrop-blur-sm border border-yellow-500/20 rounded-xl shadow-[0_0_30px_rgba(234,179,8,0.1)] p-6 hover:border-yellow-500/40 transition-colors">
                  <div class="flex-1">
                    <div class="flex items-center mb-4">
                      <div class="p-3 bg-blue-500/20 rounded-lg">
                        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" data-lucide="x" class="lucide lucide-x h-6 w-6 text-sky-400"><path d="M18 6 6 18"></path><path d="m6 6 12 12"></path></svg>
                      </div>
                      <h3 class="text-lg font-semibold text-gray-100 ml-3">X Content</h3>
                    </div>
                    <p class="text-gray-400 mb-4">Create and manage your X posts</p>
                    <div class="space-y-3">
                      <div class="flex justify-between items-center text-sm">
                        <span class="text-gray-300">Total Posts:</span>
                        <span class="text-green-400 font-medium"><%= Current.user.social_media_contents.count %></span>
                      </div>
                      <div class="flex justify-between items-center text-sm">
                        <span class="text-gray-300">Published:</span>
                        <span class="text-green-400 font-medium"><%= Current.user.social_media_contents.where(status: 'published').count %></span>
                      </div>
                      <div class="flex justify-between items-center text-sm">
                        <span class="text-gray-300">Drafts:</span>
                        <span class="text-yellow-400 font-medium"><%= Current.user.social_media_contents.where(status: 'draft').count %></span>
                      </div>
                    </div>
                  </div>
                  <div class="mt-4 space-y-2">
                    <%= link_to app_social_media_contents_path, class: "block w-full px-4 py-2 bg-sky-500/10 border border-sky-500/30 rounded-lg text-sky-400 hover:bg-sky-500/20 transition-colors text-center" do %>
                      <i data-lucide="list" class="h-4 w-4 inline mr-2"></i>
                      Manage Posts
                    <% end %>
                    <%= link_to new_app_social_media_content_path(platform: 'x'), class: "block w-full px-4 py-2 bg-gradient-to-r from-yellow-500 to-red-500 text-white rounded-lg font-semibold transition-all duration-200 hover:shadow-[0_0_20px_rgba(234,179,8,0.3)] text-center" do %>
                      <i data-lucide="plus" class="h-4 w-4 inline mr-2"></i>
                      Create Post
                    <% end %>
                  </div>
                </div>

                              <!-- AI Prompts -->
                <div class="bg-[#1E293B]/80 backdrop-blur-sm border border-yellow-500/20 rounded-xl shadow-[0_0_30px_rgba(234,179,8,0.1)] p-6 hover:border-yellow-500/40 transition-colors">
                  <div class="flex items-center mb-4">
                    <div class="p-3 bg-blue-500/20 rounded-lg">
                      <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" data-lucide="message-square" class="lucide lucide-message-square h-6 w-6 text-blue-400"><path d="M21 15a2 2 0 0 1-2 2H7l-4 4V5a2 2 0 0 1 2-2h14a2 2 0 0 1 2 2z"></path></svg>
                    </div>
