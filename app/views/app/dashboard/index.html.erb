<div class="min-h-screen bg-[#0F172A]">
  <main>
    <!-- Dashboard Section -->
    <section class="py-16 sm:py-24 bg-[#0F172A] text-white relative overflow-hidden">
      <div class="container mx-auto px-4 relative">
        <div class="max-w-6xl mx-auto">
          <!-- Welcome Section -->
          <div class="bg-[#1E293B]/80 backdrop-blur-sm px-6 py-8 border border-yellow-500/20 rounded-xl shadow-[0_0_30px_rgba(234,179,8,0.1)] mb-8">
            <h1 class="font-bold text-3xl text-gray-100 mb-2">Content Dashboard</h1>
            <p class="text-base text-gray-400 mt-2">
              Connect your accounts and manage your content workflow.
            </p>
          </div>

          <!-- Connection Status Cards -->
          <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-8">
            <!-- LinkedIn Connection -->
            <% linkedin_provider = Current.user.authentication_providers.find_by(provider: 'linkedin') %>
            <% linkedin_connected = linkedin_provider.present? %>
            <div class="bg-[#1E293B]/80 backdrop-blur-sm border border-yellow-500/20 rounded-xl shadow-[0_0_30px_rgba(234,179,8,0.1)] p-6 hover:border-yellow-500/40 transition-colors">
              <div class="flex items-center justify-between mb-4">
                <div class="flex items-center">
                  <div class="p-3 <%= linkedin_connected ? 'bg-blue-500/20' : 'bg-gray-500/20' %> rounded-lg">
                    <i data-lucide="linkedin" class="h-6 w-6 <%= linkedin_connected ? 'text-blue-400' : 'text-gray-400' %>"></i>
                  </div>
                  <h3 class="text-lg font-semibold text-gray-100 ml-3">LinkedIn</h3>
                </div>
                <% if linkedin_connected %>
                  <span class="px-2 py-1 bg-green-500/20 border border-green-500/30 rounded-full text-xs text-green-400 font-medium">
                    <i data-lucide="check" class="h-3 w-3 inline mr-1"></i>Connected
                  </span>
                <% end %>
              </div>
              
              <p class="text-gray-400 mb-4">
                <%= linkedin_connected ? 'Your LinkedIn account is connected and ready to use.' : 'Connect your LinkedIn account to share content automatically.' %>
              </p>
              
              <% if linkedin_connected %>
                <%= button_to app_authentication_provider_path(linkedin_provider), 
                    method: :delete, 
                    confirm: "Are you sure you want to remove your LinkedIn connection?",
                    class: "w-full px-4 py-2 bg-red-500/10 border border-red-500/30 rounded-lg text-red-400 hover:bg-red-500/20 transition-colors flex items-center justify-center" do %>
                  <i data-lucide="unlink" class="h-4 w-4 mr-2"></i>
                  Remove Connection
                <% end %>
              <% else %>
                <%= form_tag('/auth/linkedin', method: 'post', data: {turbo: false}, class: 'w-full') do %>
                  <button type='submit' class="w-full px-4 py-2 bg-gradient-to-r from-yellow-500 to-red-500 text-white rounded-lg font-semibold transition-all duration-200 hover:shadow-[0_0_20px_rgba(234,179,8,0.3)] flex items-center justify-center">
                    <i data-lucide="linkedin" class="h-4 w-4 mr-2"></i>
                    Connect LinkedIn
                  </button>
                <% end %>
              <% end %>
            </div>

            <!-- Twitter Connection -->
            <% twitter_provider = Current.user.authentication_providers.find_by(provider: 'twitter2') %>
            <% twitter_connected = twitter_provider.present? %>
            <div class="bg-[#1E293B]/80 backdrop-blur-sm border border-yellow-500/20 rounded-xl shadow-[0_0_30px_rgba(234,179,8,0.1)] p-6 hover:border-yellow-500/40 transition-colors">
              <div class="flex items-center justify-between mb-4">
                <div class="flex items-center">
                  <div class="p-3 <%= twitter_connected ? 'bg-sky-500/20' : 'bg-gray-500/20' %> rounded-lg">
                    <i data-lucide="twitter" class="h-6 w-6 <%= twitter_connected ? 'text-sky-400' : 'text-gray-400' %>"></i>
                  </div>
                  <h3 class="text-lg font-semibold text-gray-100 ml-3">Twitter</h3>
                </div>
                <% if twitter_connected %>
                  <span class="px-2 py-1 bg-green-500/20 border border-green-500/30 rounded-full text-xs text-green-400 font-medium">
                    <i data-lucide="check" class="h-3 w-3 inline mr-1"></i>Connected
                  </span>
                <% end %>
              </div>
              
              <p class="text-gray-400 mb-4">
                <%= twitter_connected ? 'Your Twitter account is connected and ready to use.' : 'Connect your Twitter account to share content automatically.' %>
              </p>
              
              <% if twitter_connected %>
                <%= button_to app_authentication_provider_path(twitter_provider), 
                    method: :delete, 
                    confirm: "Are you sure you want to remove your Twitter connection?",
                    class: "w-full px-4 py-2 bg-red-500/10 border border-red-500/30 rounded-lg text-red-400 hover:bg-red-500/20 transition-colors flex items-center justify-center" do %>
                  <i data-lucide="unlink" class="h-4 w-4 mr-2"></i>
                  Remove Connection
                <% end %>
              <% else %>
                <%= form_tag('/auth/twitter2', method: 'post', data: {turbo: false}, class: 'w-full') do %>
                  <button type='submit' class="w-full px-4 py-2 bg-gradient-to-r from-yellow-500 to-red-500 text-white rounded-lg font-semibold transition-all duration-200 hover:shadow-[0_0_20px_rgba(234,179,8,0.3)] flex items-center justify-center">
                    <i data-lucide="twitter" class="h-4 w-4 mr-2"></i>
                    Connect Twitter
                  </button>
                <% end %>
              <% end %>
            </div>

            <!-- WordPress Connection -->
            <% wordpress_connected = Current.user.wordpress_websites.any? %>
            <div class="bg-[#1E293B]/80 backdrop-blur-sm border border-yellow-500/20 rounded-xl shadow-[0_0_30px_rgba(234,179,8,0.1)] p-6 hover:border-yellow-500/40 transition-colors">
              <div class="flex items-center justify-between mb-4">
                <div class="flex items-center">
                  <div class="p-3 <%= wordpress_connected ? 'bg-blue-500/20' : 'bg-gray-500/20' %> rounded-lg">
                    <i data-lucide="globe" class="h-6 w-6 <%= wordpress_connected ? 'text-blue-400' : 'text-gray-400' %>"></i>
                  </div>
                  <h3 class="text-lg font-semibold text-gray-100 ml-3">WordPress</h3>
                </div>
                <% if wordpress_connected %>
                  <span class="px-2 py-1 bg-green-500/20 border border-green-500/30 rounded-full text-xs text-green-400 font-medium">
                    <i data-lucide="check" class="h-3 w-3 inline mr-1"></i>
                    <%= pluralize(Current.user.wordpress_websites.count, 'site') %>
                  </span>
                <% end %>
              </div>
              
              <p class="text-gray-400 mb-4">
                <%= wordpress_connected ? "You have #{pluralize(Current.user.wordpress_websites.count, 'WordPress site')} connected and ready to use." : 'Connect your WordPress websites to manage content automatically.' %>
              </p>
              
              <% if wordpress_connected %>
                <%= link_to app_wordpress_websites_path, class: "block w-full px-4 py-2 bg-green-500/10 border border-green-500/30 rounded-lg text-green-400 hover:bg-green-500/20 transition-colors text-center" do %>
                  <i data-lucide="settings" class="h-4 w-4 inline mr-2"></i>
                  Manage Sites (<%= Current.user.wordpress_websites.count %>)
                <% end %>
              <% else %>
                <%= link_to new_app_wordpress_website_path, class: "block w-full px-4 py-2 bg-gradient-to-r from-yellow-500 to-red-500 text-white rounded-lg font-semibold transition-all duration-200 hover:shadow-[0_0_20px_rgba(234,179,8,0.3)] text-center" do %>
                  <i data-lucide="globe" class="h-4 w-4 inline mr-2"></i>
                  Connect WordPress
                <% end %>
              <% end %>
            </div>
          </div>

          <!-- Content Management Section -->
          <div class="mb-8">
            <div class="bg-[#1E293B]/80 backdrop-blur-sm px-6 py-6 border border-yellow-500/20 rounded-xl shadow-[0_0_30px_rgba(234,179,8,0.1)] mb-6">
              <h2 class="font-bold text-xl text-gray-100">Content Management</h2>
            </div>
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
              <!-- WordPress Content -->
              <div class="bg-[#1E293B]/80 backdrop-blur-sm border border-yellow-500/20 rounded-xl shadow-[0_0_30px_rgba(234,179,8,0.1)] p-6 hover:border-yellow-500/40 transition-colors">
                <div class="flex items-center mb-4">
                  <div class="p-3 bg-green-500/20 rounded-lg">
                    <i data-lucide="file-text" class="h-6 w-6 text-green-400"></i>
                  </div>
                  <h3 class="text-lg font-semibold text-gray-100 ml-3">WordPress Content</h3>
                </div>
                <p class="text-gray-400 mb-4">Create, edit, and manage your WordPress posts and pages</p>
                <div class="space-y-3">
                  <div class="flex justify-between items-center text-sm">
                    <span class="text-gray-300">Total Content:</span>
                    <span class="text-green-400 font-medium"><%= Current.user.wordpress_contents.count %></span>
                  </div>
                  <div class="flex justify-between items-center text-sm">
                    <span class="text-gray-300">Published:</span>
                    <span class="text-green-400 font-medium"><%= Current.user.wordpress_contents.where(status: 'publish').count %></span>
                  </div>
                  <div class="flex justify-between items-center text-sm">
                    <span class="text-gray-300">Drafts:</span>
                    <span class="text-yellow-400 font-medium"><%= Current.user.wordpress_contents.where(status: 'draft').count %></span>
                  </div>
                </div>
                <div class="mt-4 space-y-2">
                  <%= link_to app_wordpress_contents_path, class: "block w-full px-4 py-2 bg-green-500/10 border border-green-500/30 rounded-lg text-green-400 hover:bg-green-500/20 transition-colors text-center" do %>
                    <i data-lucide="list" class="h-4 w-4 inline mr-2"></i>
                    Manage Content
                  <% end %>
                  <%= link_to new_app_wordpress_content_path, class: "block w-full px-4 py-2 bg-gradient-to-r from-yellow-500 to-red-500 text-white rounded-lg font-semibold transition-all duration-200 hover:shadow-[0_0_20px_rgba(234,179,8,0.3)] text-center" do %>
                    <i data-lucide="plus" class="h-4 w-4 inline mr-2"></i>
                    Create New Post
                  <% end %>
                  <%= link_to new_app_bulk_wordpress_content_generation_path, class: "block w-full px-4 py-2 bg-purple-500/10 border border-purple-500/30 rounded-lg text-purple-400 hover:bg-purple-500/20 transition-colors text-center" do %>
                    <i data-lucide="zap" class="h-4 w-4 inline mr-2"></i>
                    Bulk Generate
                  <% end %>
                </div>
              </div>

                <!-- SEO Domains -->
                <div class="flex flex-col h-full bg-[#1E293B]/80 backdrop-blur-sm border border-yellow-500/20 rounded-xl shadow-[0_0_30px_rgba(234,179,8,0.1)] p-6 hover:border-yellow-500/40 transition-colors">
                  <div class="flex-1">
                    <div class="flex items-center mb-4">
                      <div class="p-3 bg-purple-500/20 rounded-lg">
                        <i data-lucide="search" class="h-6 w-6 text-purple-400"></i>
                      </div>
                      <h3 class="text-lg font-semibold text-gray-100 ml-3">SEO Domains</h3>
                    </div>
                    <p class="text-gray-400 mb-4">AI-generated SEO-optimized pages for keywords</p>
                    <div class="space-y-3">
                      <div class="flex justify-between items-center text-sm">
                        <span class="text-gray-300">Domains:</span>
                        <span class="text-purple-400 font-medium"><%= Current.user.domains.count %></span>
                      </div>
                      <div class="flex justify-between items-center text-sm">
                        <span class="text-gray-300">Keywords:</span>
                        <span class="text-purple-400 font-medium"><%= Current.user.domains.joins(:keywords).count %></span>
                      </div>
                    </div>
                  </div>
                  <div>
                    <div class="mt-4 space-y-2">
                      <%= link_to app_domains_path, class: "block w-full px-4 py-2 bg-purple-500/10 border border-purple-500/30 rounded-lg text-purple-400 hover:bg-purple-500/20 transition-colors text-center" do %>
                        <i data-lucide="list" class="h-4 w-4 inline mr-2"></i>
                        Manage Domains
                      <% end %>
                      <%= link_to new_app_domain_path, class: "block w-full px-4 py-2 bg-gradient-to-r from-yellow-500 to-red-500 text-white rounded-lg font-semibold transition-all duration-200 hover:shadow-[0_0_20px_rgba(234,179,8,0.3)] text-center" do %>
                        <i data-lucide="plus" class="h-4 w-4 inline mr-2"></i>
                        Add New Domain
                      <% end %>
                    </div>
                  </div>
                </div>

              <!-- AI Prompts -->
              <div class="bg-[#1E293B]/80 backdrop-blur-sm border border-yellow-500/20 rounded-xl shadow-[0_0_30px_rgba(234,179,8,0.1)] p-6 hover:border-yellow-500/40 transition-colors">
                <div class="flex items-center mb-4">
                  <div class="p-3 bg-orange-500/20 rounded-lg">
                    <i data-lucide="message-square" class="h-6 w-6 text-orange-400"></i>
                  </div>
                  <h3 class="text-lg font-semibold text-gray-100 ml-3">AI Prompts</h3>
                </div>
                <p class="text-gray-400 mb-4">Customize AI prompts for better content generation</p>
                <div class="space-y-3">
                  <div class="flex justify-between items-center text-sm">
                    <span class="text-gray-300">WordPress:</span>
                    <span class="text-blue-400 font-medium"><%= Current.user.prompts.where(target: 'wordpress').count %></span>
                  </div>
                  <div class="flex justify-between items-center text-sm">
                    <span class="text-gray-300">X (Twitter):</span>
                    <span class="text-sky-400 font-medium"><%= Current.user.prompts.where(target: 'x').count %></span>
                  </div>
                  <div class="flex justify-between items-center text-sm">
                    <span class="text-gray-300">LinkedIn:</span>
                    <span class="text-blue-600 font-medium"><%= Current.user.prompts.where(target: 'linkedin').count %></span>
                  </div>
                </div>
                <div class="mt-4 space-y-2">
                  <%= link_to app_prompts_path, class: "block w-full px-4 py-2 bg-orange-500/10 border border-orange-500/30 rounded-lg text-orange-400 hover:bg-orange-500/20 transition-colors text-center" do %>
                    <i data-lucide="list" class="h-4 w-4 inline mr-2"></i>
                    Manage Prompts
<% end %>
                  <%= link_to new_app_prompt_path, class: "block w-full px-4 py-2 bg-gradient-to-r from-yellow-500 to-red-500 text-white rounded-lg font-semibold transition-all duration-200 hover:shadow-[0_0_20px_rgba(234,179,8,0.3)] text-center" do %>
                    <i data-lucide="plus" class="h-4 w-4 inline mr-2"></i>
                    Create New Prompt
<% end %>
                </div>
              </div>

                <!-- Keywords -->
                <div class="bg-[#1E293B]/80 backdrop-blur-sm border border-yellow-500/20 rounded-xl shadow-[0_0_30px_rgba(234,179,8,0.1)] p-6 hover:border-yellow-500/40 transition-colors">
                  <div class="flex items-center mb-4">
                    <div class="p-3 bg-blue-500/20 rounded-lg">
                      <i data-lucide="search" class="h-6 w-6 text-blue-400"></i>
                    </div>
                    <h3 class="text-lg font-semibold text-gray-100 ml-3">SEO Keywords</h3>
                  </div>
                  <p class="text-gray-400 mb-4">Track and analyze keyword opportunities across domains</p>
                  <div class="space-y-3">
                    <div class="flex justify-between items-center text-sm">
                      <span class="text-gray-300">Total Keywords:</span>
                      <span class="text-blue-400 font-medium"><%= Current.user.domains.joins(:keywords).count %></span>
                    </div>
                    <div class="flex justify-between items-center text-sm">
                      <span class="text-gray-300">Long-tail:</span>
                      <span class="text-green-400 font-medium"><%= Current.user.domains.joins(:keywords).where(keywords: { is_long_tail: true }).count %></span>
                    </div>
                    <div class="flex justify-between items-center text-sm">
                      <span class="text-gray-300">Commercial:</span>
                      <span class="text-yellow-400 font-medium"><%= Current.user.domains.joins(:keywords).where(keywords: { search_intent: 'commercial' }).count %></span>
                    </div>
                  </div>
                  <div class="mt-4 space-y-2">
                    <%= link_to app_keywords_path, class: "block w-full px-4 py-2 bg-blue-500/10 border border-blue-500/30 rounded-lg text-blue-400 hover:bg-blue-500/20 transition-colors text-center" do %>
                      <i data-lucide="list" class="h-4 w-4 inline mr-2"></i>
                      View Keywords
<% end %>
                    <button class="block w-full px-4 py-2 bg-gradient-to-r from-yellow-500 to-red-500 text-white rounded-lg font-semibold transition-all duration-200 hover:shadow-[0_0_20px_rgba(234,179,8,0.3)] text-center">
                      <i data-lucide="plus" class="h-4 w-4 inline mr-2"></i>
                      Add Keyword
                    </button>
                  </div>
                </div>
              </div>
            </div>
          </div>

          <!-- Account Overview -->
          <div class="bg-[#1E293B]/80 backdrop-blur-sm px-6 py-8 border border-yellow-500/20 rounded-xl shadow-[0_0_30px_rgba(234,179,8,0.1)]">
            <h2 class="font-bold text-xl text-gray-100 mb-6">Account Overview</h2>
            
            <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
              <div class="text-center">
                <div class="text-3xl font-bold text-blue-400 mb-2">
                  <%= Current.user.authentication_providers.count %>
                </div>
                <p class="text-gray-400">Connected Accounts</p>
              </div>
              
              <div class="text-center">
                <div class="text-3xl font-bold text-green-400 mb-2">
                  <%= Current.user.wordpress_websites.count %>
                </div>
                <p class="text-gray-400">WordPress Sites</p>
              </div>
              
              <div class="text-center">
                <div class="text-3xl font-bold text-yellow-400 mb-2">
                  <%= Current.user.wordpress_contents.where(status: 'publish').count %>
                </div>
                <p class="text-gray-400">Content Published</p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>
  </main>
</div>