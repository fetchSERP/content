<div class="py-16">
  <div class="max-w-4xl mx-auto px-4">
    <!-- Welcome Section -->
    <div class="bg-gray-800 px-6 py-8 border border-gray-700 rounded-xl shadow-xl mb-8">
      <h1 class="font-bold text-3xl text-gray-100 mb-2">Content Dashboard</h1>
      <p class="text-lg text-gray-400">
        Connect your accounts and manage your content workflow.
      </p>
    </div>

    <!-- Connection Status Cards -->
    <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-8">
      <!-- LinkedIn Connection -->
      <% linkedin_provider = Current.user.authentication_providers.find_by(provider: 'linkedin') %>
      <% linkedin_connected = linkedin_provider.present? %>
      <div class="bg-gray-800 border border-gray-700 rounded-xl p-6 hover:border-gray-600 transition-colors">
        <div class="flex items-center justify-between mb-4">
          <div class="flex items-center">
            <div class="p-3 <%= linkedin_connected ? 'bg-blue-500/20' : 'bg-gray-500/20' %> rounded-lg">
              <i data-lucide="linkedin" class="h-6 w-6 <%= linkedin_connected ? 'text-blue-400' : 'text-gray-400' %>"></i>
            </div>
            <h3 class="text-lg font-semibold text-gray-100 ml-3">LinkedIn</h3>
          </div>
          <% if linkedin_connected %>
            <span class="px-2 py-1 bg-green-500/20 border border-green-500/30 rounded-full text-xs text-green-400 font-medium">
              <i data-lucide="check" class="h-3 w-3 inline mr-1"></i>Connected
            </span>
          <% end %>
        </div>
        
        <p class="text-gray-400 mb-4">
          <%= linkedin_connected ? 'Your LinkedIn account is connected and ready to use.' : 'Connect your LinkedIn account to share content automatically.' %>
        </p>
        
        <% if linkedin_connected %>
          <%= button_to app_authentication_provider_path(linkedin_provider), 
              method: :delete, 
              confirm: "Are you sure you want to remove your LinkedIn connection?",
              class: "w-full px-4 py-2 bg-red-500/10 border border-red-500/30 rounded-lg text-red-400 hover:bg-red-500/20 transition-colors flex items-center justify-center" do %>
            <i data-lucide="unlink" class="h-4 w-4 mr-2"></i>
            Remove Connection
          <% end %>
        <% else %>
          <%= form_tag('/auth/linkedin', method: 'post', data: {turbo: false}, class: 'w-full') do %>
            <button type='submit' class="w-full px-4 py-2 bg-blue-600 hover:bg-blue-700 text-white rounded-lg transition-colors flex items-center justify-center">
              <i data-lucide="linkedin" class="h-4 w-4 mr-2"></i>
              Connect LinkedIn
            </button>
          <% end %>
        <% end %>
      </div>

      <!-- Twitter Connection -->
      <% twitter_provider = Current.user.authentication_providers.find_by(provider: 'twitter2') %>
      <% twitter_connected = twitter_provider.present? %>
      <div class="bg-gray-800 border border-gray-700 rounded-xl p-6 hover:border-gray-600 transition-colors">
        <div class="flex items-center justify-between mb-4">
          <div class="flex items-center">
            <div class="p-3 <%= twitter_connected ? 'bg-sky-500/20' : 'bg-gray-500/20' %> rounded-lg">
              <i data-lucide="twitter" class="h-6 w-6 <%= twitter_connected ? 'text-sky-400' : 'text-gray-400' %>"></i>
            </div>
            <h3 class="text-lg font-semibold text-gray-100 ml-3">Twitter</h3>
          </div>
          <% if twitter_connected %>
            <span class="px-2 py-1 bg-green-500/20 border border-green-500/30 rounded-full text-xs text-green-400 font-medium">
              <i data-lucide="check" class="h-3 w-3 inline mr-1"></i>Connected
            </span>
          <% end %>
        </div>
        
        <p class="text-gray-400 mb-4">
          <%= twitter_connected ? 'Your Twitter account is connected and ready to use.' : 'Connect your Twitter account to share content automatically.' %>
        </p>
        
        <% if twitter_connected %>
          <%= button_to app_authentication_provider_path(twitter_provider), 
              method: :delete, 
              confirm: "Are you sure you want to remove your Twitter connection?",
              class: "w-full px-4 py-2 bg-red-500/10 border border-red-500/30 rounded-lg text-red-400 hover:bg-red-500/20 transition-colors flex items-center justify-center" do %>
            <i data-lucide="unlink" class="h-4 w-4 mr-2"></i>
            Remove Connection
          <% end %>
        <% else %>
          <%= form_tag('/auth/twitter2', method: 'post', data: {turbo: false}, class: 'w-full') do %>
            <button type='submit' class="w-full px-4 py-2 bg-sky-500 hover:bg-sky-600 text-white rounded-lg transition-colors flex items-center justify-center">
              <i data-lucide="twitter" class="h-4 w-4 mr-2"></i>
              Connect Twitter
            </button>
          <% end %>
        <% end %>
      </div>

      <!-- WordPress Connection -->
      <% wordpress_connected = Current.user.wordpress_websites.any? %>
      <div class="bg-gray-800 border border-gray-700 rounded-xl p-6 hover:border-gray-600 transition-colors">
        <div class="flex items-center justify-between mb-4">
          <div class="flex items-center">
            <div class="p-3 <%= wordpress_connected ? 'bg-blue-500/20' : 'bg-gray-500/20' %> rounded-lg">
              <i data-lucide="globe" class="h-6 w-6 <%= wordpress_connected ? 'text-blue-400' : 'text-gray-400' %>"></i>
            </div>
            <h3 class="text-lg font-semibold text-gray-100 ml-3">WordPress</h3>
          </div>
          <% if wordpress_connected %>
            <span class="px-2 py-1 bg-green-500/20 border border-green-500/30 rounded-full text-xs text-green-400 font-medium">
              <i data-lucide="check" class="h-3 w-3 inline mr-1"></i>
              <%= pluralize(Current.user.wordpress_websites.count, 'site') %>
            </span>
          <% end %>
        </div>
        
        <p class="text-gray-400 mb-4">
          <%= wordpress_connected ? "You have #{pluralize(Current.user.wordpress_websites.count, 'WordPress site')} connected." : 'Connect your WordPress websites to manage content automatically.' %>
        </p>
        
        <% if wordpress_connected %>
          <%= link_to app_wordpress_websites_path, class: "block w-full px-4 py-2 bg-green-500/10 border border-green-500/30 rounded-lg text-green-400 hover:bg-green-500/20 transition-colors text-center" do %>
            <i data-lucide="settings" class="h-4 w-4 inline mr-2"></i>
            Manage Sites (<%= Current.user.wordpress_websites.count %>)
          <% end %>
        <% else %>
          <%= link_to new_app_wordpress_website_path, class: "block w-full px-4 py-2 bg-indigo-600 hover:bg-indigo-700 text-white rounded-lg transition-colors text-center" do %>
            <i data-lucide="globe" class="h-4 w-4 inline mr-2"></i>
            Connect WordPress
          <% end %>
        <% end %>
      </div>
    </div>

    <!-- Quick Stats -->
    <div class="bg-gray-800 px-6 py-8 border border-gray-700 rounded-xl shadow-xl">
      <h2 class="font-bold text-xl text-gray-100 mb-6">Account Overview</h2>
      
      <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
        <div class="text-center">
          <div class="text-3xl font-bold text-blue-400 mb-2">
            <%= Current.user.authentication_providers.count %>
          </div>
          <p class="text-gray-400">Connected Accounts</p>
        </div>
        
        <div class="text-center">
          <div class="text-3xl font-bold text-green-400 mb-2">
            <%= Current.user.wordpress_websites.count %>
          </div>
          <p class="text-gray-400">WordPress Sites</p>
        </div>
        
        <div class="text-center">
          <div class="text-3xl font-bold text-yellow-400 mb-2">0</div>
          <p class="text-gray-400">Content Published</p>
        </div>
      </div>

      <% if Current.user.authentication_providers.empty? && Current.user.wordpress_websites.empty? %>
        <div class="mt-8 text-center">
          <div class="mx-auto w-16 h-16 bg-gray-700/50 rounded-full flex items-center justify-center mb-4">
            <i data-lucide="link" class="h-8 w-8 text-gray-400"></i>
          </div>
          <p class="text-gray-400 mb-4">Get started by connecting your first account</p>
          <div class="flex flex-wrap justify-center gap-3">
            <%= form_tag('/auth/linkedin', method: 'post', data: {turbo: false}, class: 'inline-block') do %>
              <button type='submit' class="px-4 py-2 bg-blue-600 hover:bg-blue-700 text-white rounded-lg transition-colors text-sm">
                Connect LinkedIn
              </button>
            <% end %>
            <%= form_tag('/auth/twitter2', method: 'post', data: {turbo: false}, class: 'inline-block') do %>
              <button type='submit' class="px-4 py-2 bg-sky-500 hover:bg-sky-600 text-white rounded-lg transition-colors text-sm">
                Connect Twitter
              </button>
            <% end %>
            <%= link_to "Connect WordPress", new_app_wordpress_website_path, class: "px-4 py-2 bg-indigo-600 hover:bg-indigo-700 text-white rounded-lg transition-colors text-sm" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>