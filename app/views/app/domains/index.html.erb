<div class="min-h-screen bg-[#0F172A]">
  <main>
    <!-- Domains Section -->
    <section class="py-16 sm:py-24 bg-[#0F172A] text-white relative overflow-hidden">
      <div class="container mx-auto px-4 relative">
        <div class="max-w-6xl mx-auto">
          <div class="bg-[#1E293B]/80 backdrop-blur-sm px-6 py-8 border border-yellow-500/20 rounded-xl shadow-[0_0_30px_rgba(234,179,8,0.1)]">
            <div class="flex justify-between items-center mb-6">
              <div>
                <h1 class="font-bold text-2xl text-gray-100">SEO Domains</h1>
                <p class="text-base text-gray-400 mt-2">
                  Manage your domains and track keyword opportunities.
                </p>
              </div>
              <%= link_to "Add New Domain", new_app_domain_path, class: "group relative inline-block px-6 py-3 bg-gradient-to-r from-yellow-500 to-red-500 text-white rounded-md font-semibold transition-all duration-200 hover:shadow-[0_0_20px_rgba(234,179,8,0.3)] overflow-hidden" %>
            </div>

            <%= tag.div(flash[:alert], class: "mb-4 text-red-400") if flash[:alert] %>
            <%= tag.div(flash[:notice], class: "mb-4 text-green-400") if flash[:notice] %>

            <% if @domains.any? %>
              <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
                <% @domains.each do |domain| %>
                  <div class="bg-[#1E293B]/60 border border-yellow-500/30 rounded-lg p-6 hover:border-yellow-500/50 hover:shadow-[0_0_15px_rgba(234,179,8,0.2)] transition-all">
                    <div class="flex justify-between items-start mb-4">
                      <div class="flex items-center">
                        <div class="p-3 bg-purple-500/20 border border-purple-500/30 rounded-lg mr-3">
                          <i data-lucide="globe" class="h-6 w-6 text-purple-400"></i>
                        </div>
                        <div>
                          <h3 class="text-lg font-semibold text-gray-100"><%= domain.name %></h3>
                          <p class="text-sm text-gray-400">
                            <i data-lucide="map-pin" class="h-3 w-3 inline mr-1"></i>
                            <%= domain.country&.upcase || 'US' %>
                          </p>
                        </div>
                      </div>
                      <div class="flex space-x-2">
                        <%= button_to app_domain_path(domain), method: :delete, 
                            confirm: "Are you sure you want to delete this domain? This will also delete all associated keywords.",
                            class: "text-red-400 hover:text-red-300 transition-colors",
                            title: "Delete Domain" do %>
                          <i data-lucide="trash-2" class="h-4 w-4"></i>
                        <% end %>
                      </div>
                    </div>
                    
                    <div class="space-y-3">
                      <div class="flex justify-between items-center text-sm">
                        <span class="text-gray-300">Total Keywords:</span>
                        <span class="text-purple-400 font-medium"><%= domain.keywords.count %></span>
                      </div>
                      <div class="flex justify-between items-center text-sm">
                        <span class="text-gray-300">Long-tail Keywords:</span>
                        <span class="text-green-400 font-medium"><%= domain.keywords.where(is_long_tail: true).count %></span>
                      </div>
                      <div class="flex justify-between items-center text-sm">
                        <span class="text-gray-300">Commercial Intent:</span>
                        <span class="text-yellow-400 font-medium"><%= domain.keywords.where(search_intent: 'commercial').count %></span>
                      </div>
                    </div>
                    
                    <div class="mt-4 pt-4 border-t border-yellow-500/20">
                      <div class="flex justify-between items-center">
                        <span class="text-xs text-gray-500">
                          Added <%= time_ago_in_words(domain.created_at) %> ago
                        </span>
                        <div class="flex space-x-2">
                          <span class="px-2 py-1 bg-purple-500/20 border border-purple-500/30 rounded-full text-xs text-purple-400 font-medium">
                            SEO Domain
                          </span>
                        </div>
                      </div>
                    </div>
                  </div>
                <% end %>
              </div>
            <% else %>
              <div class="text-center py-12">
                <div class="mx-auto w-24 h-24 bg-gradient-to-r from-yellow-500/10 to-red-500/10 border border-yellow-500/20 rounded-full flex items-center justify-center mb-4">
                  <i data-lucide="globe" class="h-12 w-12 text-yellow-400"></i>
                </div>
                <h3 class="text-lg font-medium text-gray-300 mb-2">No domains yet</h3>
                <p class="text-gray-400 mb-6">Add your first domain to start tracking SEO keywords and opportunities.</p>
                <%= link_to "Add Your First Domain", new_app_domain_path, class: "group relative inline-block px-6 py-3 bg-gradient-to-r from-yellow-500 to-red-500 text-white rounded-md font-semibold transition-all duration-200 hover:shadow-[0_0_20px_rgba(234,179,8,0.3)] overflow-hidden" %>
              </div>
            <% end %>

            <div class="mt-8 text-center">
              <%= link_to "Back to Dashboard", app_root_path, class: "text-gray-400 hover:text-gray-300 transition-colors" %>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Quick Stats Card -->
    <% if @domains.any? %>
      <section class="pb-16 bg-[#0F172A]">
        <div class="container mx-auto px-4">
          <div class="max-w-6xl mx-auto">
            <div class="bg-[#1E293B]/80 backdrop-blur-sm px-6 py-6 border border-yellow-500/20 rounded-xl shadow-[0_0_30px_rgba(234,179,8,0.1)]">
              <div class="grid grid-cols-1 md:grid-cols-4 gap-6">
                <div class="text-center">
                  <div class="text-2xl font-bold text-purple-400 mb-1">
                    <%= @domains.count %>
                  </div>
                  <p class="text-gray-400 text-sm">Total Domains</p>
                </div>
                
                <div class="text-center">
                  <div class="text-2xl font-bold text-green-400 mb-1">
                    <%= @domains.joins(:keywords).count %>
                  </div>
                  <p class="text-gray-400 text-sm">Total Keywords</p>
                </div>
                
                <div class="text-center">
                  <div class="text-2xl font-bold text-yellow-400 mb-1">
                    <%= @domains.joins(:keywords).where(keywords: { is_long_tail: true }).count %>
                  </div>
                  <p class="text-gray-400 text-sm">Long-tail Keywords</p>
                </div>
                
                <div class="text-center">
                  <div class="text-2xl font-bold text-blue-400 mb-1">
                    <%= @domains.joins(:keywords).where(keywords: { search_intent: 'commercial' }).count %>
                  </div>
                  <p class="text-gray-400 text-sm">Commercial Intent</p>
                </div>
              </div>
            </div>
          </div>
        </div>
      </section>
    <% end %>
  </main>
</div> 