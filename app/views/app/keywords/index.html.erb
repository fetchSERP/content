<div class="min-h-screen bg-[#0F172A]">
  <main>
    <!-- Keywords Section -->
    <section class="py-16 sm:py-24 bg-[#0F172A] text-white relative overflow-hidden">
      <div class="container mx-auto px-4 relative">
        <div class="max-w-6xl mx-auto">
          <div class="bg-[#1E293B]/80 backdrop-blur-sm px-6 py-8 border border-yellow-500/20 rounded-xl shadow-[0_0_30px_rgba(234,179,8,0.1)]">
            <div class="flex justify-between items-center mb-6">
              <div>
                <h1 class="font-bold text-2xl text-gray-100">SEO Keywords</h1>
                <p class="text-base text-gray-400 mt-2">
                  Discover and track keyword opportunities across your domains.
                </p>
              </div>
              <div class="flex space-x-3">
                <%= link_to "Manage Domains", app_domains_path, class: "px-4 py-2 bg-purple-500/10 border border-purple-500/30 rounded-lg text-purple-400 hover:bg-purple-500/20 transition-colors" %>
                <%= link_to "Add Domain", new_app_domain_path, class: "group relative inline-block px-6 py-3 bg-gradient-to-r from-yellow-500 to-red-500 text-white rounded-md font-semibold transition-all duration-200 hover:shadow-[0_0_20px_rgba(234,179,8,0.3)] overflow-hidden" %>
              </div>
            </div>

            <%= tag.div(flash[:alert], class: "mb-4 text-red-400") if flash[:alert] %>
            <%= tag.div(flash[:notice], class: "mb-4 text-green-400") if flash[:notice] %>

            <% if @keywords.any? %>
              <!-- Keywords by Domain -->
              <% @domains.each do |domain| %>
                <% domain_keywords = domain.keywords %>
                <% if domain_keywords.any? %>
                  <div class="mb-8">
                    <div class="flex items-center justify-between mb-4">
                      <div class="flex items-center">
                        <div class="p-2 bg-purple-500/20 border border-purple-500/30 rounded-lg mr-3">
                          <i data-lucide="globe" class="h-5 w-5 text-purple-400"></i>
                        </div>
                        <div>
                          <h2 class="text-xl font-semibold text-gray-100"><%= domain.name %></h2>
                          <p class="text-sm text-gray-400">
                            <i data-lucide="map-pin" class="h-3 w-3 inline mr-1"></i>
                            <%= domain.country&.upcase || 'US' %> â€¢ <%= pluralize(domain_keywords.count, 'keyword') %>
                          </p>
                        </div>
                      </div>
                      <div class="flex space-x-2">
                        <span class="px-2 py-1 bg-green-500/20 border border-green-500/30 rounded-full text-xs text-green-400 font-medium">
                          <%= domain_keywords.where(is_long_tail: true).count %> Long-tail
                        </span>
                        <span class="px-2 py-1 bg-yellow-500/20 border border-yellow-500/30 rounded-full text-xs text-yellow-400 font-medium">
                          <%= domain_keywords.where(search_intent: 'commercial').count %> Commercial
                        </span>
                      </div>
                    </div>

                    <!-- Keywords Grid -->
                    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
                      <% domain_keywords.each do |keyword| %>
                        <div class="bg-[#1E293B]/60 border border-yellow-500/30 rounded-lg p-4 hover:border-yellow-500/50 hover:shadow-[0_0_15px_rgba(234,179,8,0.2)] transition-all">
                          <div class="flex justify-between items-start mb-2">
                            <h3 class="text-sm font-medium text-gray-100 flex-1 mr-2"><%= keyword.name %></h3>
                            <div class="flex space-x-1">
                              <% if keyword.is_long_tail %>
                                <span class="px-1.5 py-0.5 bg-green-500/20 border border-green-500/30 rounded text-xs text-green-400 font-medium">LT</span>
                              <% end %>
                              <% case keyword.search_intent %>
                              <% when 'commercial' %>
                                <span class="px-1.5 py-0.5 bg-yellow-500/20 border border-yellow-500/30 rounded text-xs text-yellow-400 font-medium">Com</span>
                              <% when 'transactional' %>
                                <span class="px-1.5 py-0.5 bg-red-500/20 border border-red-500/30 rounded text-xs text-red-400 font-medium">Trans</span>
                              <% when 'navigational' %>
                                <span class="px-1.5 py-0.5 bg-blue-500/20 border border-blue-500/30 rounded text-xs text-blue-400 font-medium">Nav</span>
                              <% else %>
                                <span class="px-1.5 py-0.5 bg-gray-500/20 border border-gray-500/30 rounded text-xs text-gray-400 font-medium">Info</span>
                              <% end %>
                            </div>
                          </div>
                          
                          <div class="flex justify-between items-center text-xs text-gray-500">
                            <span>Added <%= time_ago_in_words(keyword.created_at) %> ago</span>
                            <% if keyword.children.any? %>
                              <span class="text-purple-400"><%= keyword.children.count %> related</span>
                            <% end %>
                          </div>
                        </div>
                      <% end %>
                    </div>

                  </div>
                <% end %>
              <% end %>
            <% else %>
              <div class="text-center py-12">
                <div class="mx-auto w-24 h-24 bg-gradient-to-r from-yellow-500/10 to-red-500/10 border border-yellow-500/20 rounded-full flex items-center justify-center mb-4">
                  <i data-lucide="search" class="h-12 w-12 text-yellow-400"></i>
                </div>
                <h3 class="text-lg font-medium text-gray-300 mb-2">No keywords discovered yet</h3>
                <p class="text-gray-400 mb-6">Add domains to automatically discover relevant keywords and SEO opportunities.</p>
                <%= link_to "Add Your First Domain", new_app_domain_path, class: "group relative inline-block px-6 py-3 bg-gradient-to-r from-yellow-500 to-red-500 text-white rounded-md font-semibold transition-all duration-200 hover:shadow-[0_0_20px_rgba(234,179,8,0.3)] overflow-hidden" %>
              </div>
            <% end %>

            <div class="mt-8 text-center">
              <%= link_to "Back to Dashboard", app_root_path, class: "text-gray-400 hover:text-gray-300 transition-colors" %>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Quick Stats Card -->
    <% if @keywords.any? %>
      <section class="pb-16 bg-[#0F172A]">
        <div class="container mx-auto px-4">
          <div class="max-w-6xl mx-auto">
            <div class="bg-[#1E293B]/80 backdrop-blur-sm px-6 py-6 border border-yellow-500/20 rounded-xl shadow-[0_0_30px_rgba(234,179,8,0.1)]">
              <div class="grid grid-cols-2 md:grid-cols-4 gap-6">
                <div class="text-center">
                  <div class="text-2xl font-bold text-purple-400 mb-1">
                    <%= @keywords.count %>
                  </div>
                  <p class="text-gray-400 text-sm">Total Keywords</p>
                </div>
                
                <div class="text-center">
                  <div class="text-2xl font-bold text-green-400 mb-1">
                    <%= @keywords.where(is_long_tail: true).count %>
                  </div>
                  <p class="text-gray-400 text-sm">Long-tail</p>
                </div>
                
                <div class="text-center">
                  <div class="text-2xl font-bold text-yellow-400 mb-1">
                    <%= @keywords.where(search_intent: 'commercial').count %>
                  </div>
                  <p class="text-gray-400 text-sm">Commercial</p>
                </div>
                
                <div class="text-center">
                  <div class="text-2xl font-bold text-red-400 mb-1">
                    <%= @keywords.where(search_intent: 'transactional').count %>
                  </div>
                  <p class="text-gray-400 text-sm">Transactional</p>
                </div>
              </div>
            </div>
          </div>
        </div>
      </section>
    <% end %>
  </main>
</div> 