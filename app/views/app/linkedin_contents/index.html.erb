<div class="min-h-screen bg-[#0F172A]">
  <main>
    <!-- LinkedIn Content Section -->
    <section class="py-16 sm:py-24 bg-[#0F172A] text-white relative overflow-hidden">
      <div class="container mx-auto px-4 relative">
        <div class="max-w-6xl mx-auto">
          <div class="bg-[#1E293B]/80 backdrop-blur-sm px-6 py-8 border border-yellow-500/20 rounded-xl shadow-[0_0_30px_rgba(234,179,8,0.1)]">
            <div class="flex justify-between items-center mb-8">
              <div>
                <h1 class="font-bold text-3xl text-gray-100">LinkedIn Content</h1>
                <p class="text-base text-gray-400 mt-2">
                  Create and manage LinkedIn posts generated by AI.
                </p>
              </div>
              <%= link_to "Create New Post", new_app_linkedin_content_path, class: "group relative inline-block px-6 py-3 bg-gradient-to-r from-sky-500 to-blue-500 text-white rounded-md font-semibold transition-all duration-200 hover:shadow-[0_0_20px_rgba(59,130,246,0.3)] overflow-hidden" %>
            </div>

            <%= tag.div(flash[:alert], class: "mb-4 text-red-400") if flash[:alert] %>
            <%= tag.div(flash[:notice], class: "mb-4 text-green-400") if flash[:notice] %>

            <!-- Flash Messages -->
            <div id="flash">
              <%= render "shared/flash" if flash[:notice] || flash[:alert] %>
            </div>

            <% if @linkedin_contents.any? %>
              <div class="overflow-x-auto">
                <table class="w-full">
                  <thead>
                    <tr class="border-b border-yellow-500/20">
                      <th class="text-left py-3 px-4 text-gray-300 font-semibold">Preview</th>
                      <th class="text-left py-3 px-4 text-gray-300 font-semibold">Keyword</th>
                      <th class="text-left py-3 px-4 text-gray-300 font-semibold">Created</th>
                      <th class="text-left py-3 px-4 text-gray-300 font-semibold">Actions</th>
                    </tr>
                  </thead>
                  <tbody>
                    <% @linkedin_contents.order(created_at: :desc).each do |post| %>
                      <tr class="border-b border-yellow-500/10 hover:bg-[#0F172A]/30 transition-colors">
                        <td class="py-4 px-4 text-gray-100 max-w-sm truncate"><%= truncate(post.content, length: 80) %></td>
                        <td class="py-4 px-4 text-gray-400"><%= post.keyword %></td>
                        <td class="py-4 px-4 text-gray-400"><%= post.created_at.strftime("%B %d, %Y") %></td>
                        <td class="py-4 px-4">
                          <div class="flex space-x-3">
                            <%= link_to app_linkedin_content_path(post), class: "text-blue-400 hover:text-blue-300 transition-colors", title: "View" do %>
                              <i data-lucide="eye" class="h-4 w-4"></i>
                            <% end %>
                            <%= link_to edit_app_linkedin_content_path(post), class: "text-yellow-400 hover:text-yellow-300 transition-colors", title: "Edit" do %>
                              <i data-lucide="edit-3" class="h-4 w-4"></i>
                            <% end %>
                            <%= link_to app_linkedin_content_path(post), method: :delete, data: { confirm: "Delete this post?", turbo_method: :delete }, class: "text-red-400 hover:text-red-300 transition-colors", title: "Delete" do %>
                              <i data-lucide="trash-2" class="h-4 w-4"></i>
                            <% end %>
                          </div>
                        </td>
                      </tr>
                    <% end %>
                  </tbody>
                </table>
              </div>
            <% else %>
              <div class="text-center py-12">
                <div class="mx-auto w-24 h-24 bg-yellow-500/10 rounded-full flex items-center justify-center mb-4 border border-yellow-500/20">
                  <i data-lucide="file-text" class="h-12 w-12 text-yellow-400"></i>
                </div>
                <h3 class="text-lg font-medium text-gray-300 mb-2">No LinkedIn posts yet</h3>
                <p class="text-gray-400 mb-6">Start creating engaging LinkedIn content with AI.</p>
                <%= link_to "Create Your First Post", new_app_linkedin_content_path, class: "group relative inline-flex items-center px-6 py-3 bg-gradient-to-r from-yellow-500 to-red-500 text-white rounded-md font-semibold transition-all duration-200 hover:shadow-[0_0_20px_rgba(234,179,8,0.3)] overflow-hidden" %>
              </div>
            <% end %>

            <div class="mt-8 text-center">
              <%= link_to "Back to Dashboard", app_root_path, class: "text-gray-400 hover:text-gray-300 transition-colors" %>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Quick Stats Card -->
    <section class="pb-16 bg-[#0F172A]">
      <div class="container mx-auto px-4">
        <div class="max-w-6xl mx-auto">
          <div class="bg-[#1E293B]/80 backdrop-blur-sm px-6 py-6 border border-yellow-500/20 rounded-xl shadow-[0_0_30px_rgba(234,179,8,0.1)]">
            <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
              <div class="text-center">
                <div class="text-2xl font-bold text-yellow-400 mb-1">
                  <%= @linkedin_contents.count %>
                </div>
                <p class="text-gray-400 text-sm">Total Posts</p>
              </div>
              <!-- future stats placeholders -->
              <div class="text-center hidden md:block"></div>
              <div class="text-center hidden md:block"></div>
            </div>
          </div>
        </div>
      </div>
    </section>
  </main>
</div> 