<div class="min-h-screen bg-[#0F172A]">
  <main>
    <!-- Edit Prompt Section -->
    <section class="py-16 sm:py-24 bg-[#0F172A] text-white relative overflow-hidden">
      <div class="container mx-auto px-4 relative">
        <div class="max-w-2xl mx-auto">
          <div class="bg-[#1E293B]/80 backdrop-blur-sm px-6 py-8 border border-yellow-500/20 rounded-xl shadow-[0_0_30px_rgba(234,179,8,0.1)]">
            <div class="flex justify-between items-center mb-6">
              <div>
                <h1 class="text-2xl font-bold text-gray-100">Edit AI Prompt</h1>
                <p class="text-sm text-gray-400 mt-1">Update your custom prompt for content generation</p>
              </div>
              <%= link_to app_prompts_path, 
                  class: "text-gray-400 hover:text-gray-300 transition-colors" do %>
                <i data-lucide="x" class="h-5 w-5"></i>
              <% end %>
            </div>

            <% if @prompt.errors.any? %>
              <div class="mb-6 p-4 bg-red-900/20 border border-red-500/30 rounded-lg">
                <h3 class="text-red-400 font-medium mb-2">Please fix the following errors:</h3>
                <ul class="list-disc list-inside text-red-300 space-y-1">
                  <% @prompt.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                  <% end %>
                </ul>
              </div>
            <% end %>

            <%= form_with model: [:app, @prompt], class: "space-y-6", data: { turbo: false } do |form| %>
              
              <!-- Target Selection -->
              <div>
                <%= form.label :target, "Platform Target", class: "block text-sm font-medium text-yellow-400 mb-3" %>
                <div class="grid grid-cols-1 md:grid-cols-3 gap-3">
                  <!-- WordPress Option -->
                  <label class="relative flex items-center p-4 border border-yellow-500/30 rounded-lg cursor-pointer hover:border-yellow-500/50 hover:bg-yellow-500/5 transition-all group">
                    <%= form.radio_button :target, "wordpress", 
                        class: "sr-only peer", 
                        checked: @prompt.target == "wordpress" %>
                    <div class="flex items-center space-x-3 w-full">
                      <div class="flex items-center justify-center w-8 h-8 bg-blue-500/20 border border-blue-500/30 rounded-lg group-hover:bg-blue-500/30 transition-colors">
                        <i data-lucide="globe" class="h-4 w-4 text-blue-400"></i>
                      </div>
                      <div class="flex-1">
                        <div class="text-sm font-medium text-gray-100">WordPress</div>
                        <div class="text-xs text-gray-400">Blog posts & pages</div>
                      </div>
                    </div>
                    <!-- Radio button indicator -->
                    <div class="absolute top-2 right-2 w-4 h-4 border-2 border-gray-400 rounded-full peer-checked:border-yellow-500 peer-checked:bg-yellow-500/20 transition-colors">
                      <div class="w-2 h-2 bg-yellow-500 rounded-full m-0.5 opacity-0 peer-checked:opacity-100 transition-opacity"></div>
                    </div>
                  </label>

                  <!-- X (Twitter) Option -->
                  <label class="relative flex items-center p-4 border border-yellow-500/30 rounded-lg cursor-pointer hover:border-yellow-500/50 hover:bg-yellow-500/5 transition-all group">
                    <%= form.radio_button :target, "x", 
                        class: "sr-only peer", 
                        checked: @prompt.target == "x" %>
                    <div class="flex items-center space-x-3 w-full">
                      <div class="flex items-center justify-center w-8 h-8 bg-sky-500/20 border border-sky-500/30 rounded-lg group-hover:bg-sky-500/30 transition-colors">
                        <i data-lucide="twitter" class="h-4 w-4 text-sky-400"></i>
                      </div>
                      <div class="flex-1">
                        <div class="text-sm font-medium text-gray-100">X (Twitter)</div>
                        <div class="text-xs text-gray-400">Posts & threads</div>
                      </div>
                    </div>
                    <!-- Radio button indicator -->
                    <div class="absolute top-2 right-2 w-4 h-4 border-2 border-gray-400 rounded-full peer-checked:border-yellow-500 peer-checked:bg-yellow-500/20 transition-colors">
                      <div class="w-2 h-2 bg-yellow-500 rounded-full m-0.5 opacity-0 peer-checked:opacity-100 transition-opacity"></div>
                    </div>
                  </label>

                  <!-- LinkedIn Option -->
                  <label class="relative flex items-center p-4 border border-yellow-500/30 rounded-lg cursor-pointer hover:border-yellow-500/50 hover:bg-yellow-500/5 transition-all group">
                    <%= form.radio_button :target, "linkedin", 
                        class: "sr-only peer", 
                        checked: @prompt.target == "linkedin" %>
                    <div class="flex items-center space-x-3 w-full">
                      <div class="flex items-center justify-center w-8 h-8 bg-indigo-500/20 border border-indigo-500/30 rounded-lg group-hover:bg-indigo-500/30 transition-colors">
                        <i data-lucide="linkedin" class="h-4 w-4 text-indigo-400"></i>
                      </div>
                      <div class="flex-1">
                        <div class="text-sm font-medium text-gray-100">LinkedIn</div>
                        <div class="text-xs text-gray-400">Professional posts</div>
                      </div>
                    </div>
                    <!-- Radio button indicator -->
                    <div class="absolute top-2 right-2 w-4 h-4 border-2 border-gray-400 rounded-full peer-checked:border-yellow-500 peer-checked:bg-yellow-500/20 transition-colors">
                      <div class="w-2 h-2 bg-yellow-500 rounded-full m-0.5 opacity-0 peer-checked:opacity-100 transition-opacity"></div>
                    </div>
                  </label>
                </div>
                <p class="mt-2 text-xs text-gray-400">Select the platform this prompt will be used for</p>
              </div>
              
              <!-- User Prompt Field -->
              <div>
                <%= form.label :user_prompt, "User Prompt", class: "block text-sm font-medium text-green-400 mb-2" %>
                <%= form.text_area :user_prompt, required: true, rows: 6, 
                    class: "block w-full px-4 py-3 rounded-lg bg-[#0F172A]/50 border border-yellow-500/30 text-gray-100 placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-green-500 focus:border-transparent transition-colors resize-y" %>
                <p class="mt-1 text-xs text-gray-400">Define what you want the AI to create. Be specific about format, tone, and requirements.</p>
              </div>
              
              <!-- System Prompt Field -->
              <div>
                <%= form.label :system_prompt, "System Prompt", class: "block text-sm font-medium text-purple-400 mb-2" %>
                <%= form.text_area :system_prompt, required: true, rows: 4, 
                    class: "block w-full px-4 py-3 rounded-lg bg-[#0F172A]/50 border border-yellow-500/30 text-gray-100 placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-purple-500 focus:border-transparent transition-colors resize-y" %>
                <p class="mt-1 text-xs text-gray-400">Define the AI's role, expertise, and behavioral characteristics.</p>
              </div>

              <!-- Form Actions -->
              <div class="flex items-center justify-between pt-4">
                <div class="flex space-x-3">
                  <%= form.submit "Update Prompt", class: "px-6 py-3 bg-gradient-to-r from-yellow-500 to-red-500 text-white rounded-md font-semibold transition-all duration-200 hover:shadow-[0_0_20px_rgba(234,179,8,0.3)]" %>
                  <%= link_to "Cancel", app_prompts_path, class: "px-6 py-3 bg-transparent border-2 border-gray-500/30 rounded-md font-semibold transition-all duration-200 hover:border-gray-500/60 hover:bg-gray-500/10 text-white" %>
                </div>
              </div>
            <% end %>

            <div class="mt-6 text-center">
              <%= link_to "Back to Prompts", app_prompts_path, class: "text-gray-400 hover:text-gray-300 transition-colors text-sm" %>
            </div>
          </div>
        </div>
      </div>
    </section>
  </main>
</div> 