<div class="min-h-screen bg-[#0F172A]">
  <main>
    <!-- AI Prompts Section -->
    <section class="py-16 sm:py-24 bg-[#0F172A] text-white relative overflow-hidden">
      <div class="container mx-auto px-4 relative">
        <div class="max-w-6xl mx-auto">
          <div class="bg-[#1E293B]/80 backdrop-blur-sm px-6 py-8 border border-yellow-500/20 rounded-xl shadow-[0_0_30px_rgba(234,179,8,0.1)]">
            <div class="flex justify-between items-center mb-8">
              <div>
                <h1 class="font-bold text-3xl text-gray-100">AI Prompts</h1>
                <p class="text-base text-gray-400 mt-2">
                  Manage your custom prompts for different platforms and content types.
                </p>
              </div>
              <%= link_to "Create New Prompt", new_app_prompt_path, class: "group relative inline-block px-6 py-3 bg-gradient-to-r from-yellow-500 to-red-500 text-white rounded-md font-semibold transition-all duration-200 hover:shadow-[0_0_20px_rgba(234,179,8,0.3)] overflow-hidden" %>
            </div>

            <%= tag.div(flash[:alert], class: "mb-4 text-red-400") if flash[:alert] %>
            <%= tag.div(flash[:notice], class: "mb-4 text-green-400") if flash[:notice] %>

            <% if @prompts.any? %>
              <!-- Prompts by Platform -->
              <% @prompts.group_by(&:target).each do |target, prompts| %>
                <div class="mb-8">
                  <div class="flex items-center mb-4">
                    <div class="p-2 <%= target == 'wordpress' ? 'bg-blue-500/20 border border-blue-500/30' : target == 'x' ? 'bg-sky-500/20 border border-sky-500/30' : 'bg-indigo-500/20 border border-indigo-500/30' %> rounded-lg mr-3">
                      <% if target == 'wordpress' %>
                        <i data-lucide="globe" class="h-5 w-5 text-blue-400"></i>
                      <% elsif target == 'x' %>
                        <i data-lucide="twitter" class="h-5 w-5 text-sky-400"></i>
                      <% else %>
                        <i data-lucide="linkedin" class="h-5 w-5 text-indigo-400"></i>
                      <% end %>
                    </div>
                    <h2 class="text-xl font-semibold text-gray-100 capitalize"><%= target %> Prompts</h2>
                    <span class="ml-3 px-2 py-1 bg-yellow-500/20 border border-yellow-500/30 rounded-full text-xs text-yellow-300 font-medium">
                      <%= pluralize(prompts.count, 'prompt') %>
                    </span>
                  </div>

                  <div class="grid grid-cols-1 lg:grid-cols-2 gap-4">
                    <% prompts.each do |prompt| %>
                      <div class="bg-[#1E293B]/60 border border-yellow-500/30 rounded-lg p-4 hover:border-yellow-500/50 hover:shadow-[0_0_15px_rgba(234,179,8,0.2)] transition-all">
                        <div class="flex justify-between items-start mb-3">
                          <div class="flex items-center">
                            <span class="px-2 py-1 <%= target == 'wordpress' ? 'bg-blue-500/20 border-blue-500/30 text-blue-400' : target == 'x' ? 'bg-sky-500/20 border-sky-500/30 text-sky-400' : 'bg-indigo-500/20 border-indigo-500/30 text-indigo-400' %> border rounded-full text-xs font-medium">
                              <%= target.capitalize %>
                            </span>
                          </div>
                          <div class="flex space-x-2">
                            <%= link_to edit_app_prompt_path(prompt), class: "text-yellow-400 hover:text-yellow-300 transition-colors", title: "Edit" do %>
                              <i data-lucide="edit-3" class="h-4 w-4"></i>
                            <% end %>
                          </div>
                        </div>
                        
                        <div class="text-gray-300">
                          <div class="mb-3">
                            <div class="text-xs text-green-400 font-medium mb-1">USER PROMPT</div>
                            <div class="text-sm leading-relaxed bg-[#0F172A]/50 rounded p-3 border border-yellow-500/20">
                              <%= truncate(prompt.user_prompt, length: 150) %>
                            </div>
                          </div>
                          <div class="mb-2">
                            <div class="text-xs text-purple-400 font-medium mb-1">SYSTEM PROMPT</div>
                            <div class="text-sm leading-relaxed bg-[#0F172A]/50 rounded p-3 border border-yellow-500/20">
                              <%= truncate(prompt.system_prompt, length: 120) %>
                            </div>
                          </div>
                        </div>
                        
                        <div class="mt-3 text-xs text-gray-500">
                          Created <%= time_ago_in_words(prompt.created_at) %> ago
                        </div>
                      </div>
                    <% end %>
                  </div>
                </div>
              <% end %>
            <% else %>
              <div class="text-center py-12">
                <div class="mx-auto w-24 h-24 bg-yellow-500/10 rounded-full flex items-center justify-center mb-4 border border-yellow-500/20">
                  <i data-lucide="message-square" class="h-12 w-12 text-yellow-400"></i>
                </div>
                <h3 class="text-lg font-medium text-gray-300 mb-2">No prompts yet</h3>
                <p class="text-gray-400 mb-6">Create custom AI prompts to improve your content generation.</p>
                <%= link_to "Create Your First Prompt", new_app_prompt_path, class: "group relative inline-flex items-center px-6 py-3 bg-gradient-to-r from-yellow-500 to-red-500 text-white rounded-md font-semibold transition-all duration-200 hover:shadow-[0_0_20px_rgba(234,179,8,0.3)] overflow-hidden" %>
              </div>
            <% end %>

            <div class="mt-8 text-center">
              <%= link_to "Back to Dashboard", app_root_path, class: "text-gray-400 hover:text-gray-300 transition-colors" %>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Quick Stats Card -->
    <section class="pb-16 bg-[#0F172A]">
      <div class="container mx-auto px-4">
        <div class="max-w-6xl mx-auto">
          <div class="bg-[#1E293B]/80 backdrop-blur-sm px-6 py-6 border border-yellow-500/20 rounded-xl shadow-[0_0_30px_rgba(234,179,8,0.1)]">
            <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
              <div class="text-center">
                <div class="text-2xl font-bold text-blue-400 mb-1">
                  <%= @prompts.where(target: 'wordpress').count %>
                </div>
                <p class="text-gray-400 text-sm">WordPress Prompts</p>
              </div>
              
              <div class="text-center">
                <div class="text-2xl font-bold text-sky-400 mb-1">
                  <%= @prompts.where(target: 'x').count %>
                </div>
                <p class="text-gray-400 text-sm">X (Twitter) Prompts</p>
              </div>
              
              <div class="text-center">
                <div class="text-2xl font-bold text-indigo-400 mb-1">
                  <%= @prompts.where(target: 'linkedin').count %>
                </div>
                <p class="text-gray-400 text-sm">LinkedIn Prompts</p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>
  </main>
</div> 