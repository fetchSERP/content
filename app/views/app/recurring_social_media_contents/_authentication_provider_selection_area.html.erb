<div id="authentication_provider_selection_area">
  <% if authentication_providers.any? %>
    <div class="space-y-3">
      <% authentication_providers.each do |provider| %>
        <div class="relative">
          <input type="radio" name="recurring_social_media_content[authentication_provider_id]" value="<%= provider.id %>" id="auth_provider_<%= provider.id %>" class="peer sr-only" <%= 'checked' if selected_provider_id == provider.id %>>
          <label for="auth_provider_<%= provider.id %>" class="flex p-4 border-2 border-blue-500/30 rounded-lg cursor-pointer transition-all hover:border-blue-500/50 peer-checked:border-blue-500 peer-checked:bg-blue-500/10 peer-checked:shadow-[0_0_15px_rgba(59,130,246,0.2)]">
            <div class="flex items-center flex-1">
              <div class="flex items-center justify-center w-8 h-8 <%= platform == 'linkedin' ? 'bg-blue-500/20 border border-blue-500/30' : 'bg-gray-500/20 border border-gray-500/30' %> rounded mr-3">
                <% if platform == 'linkedin' %>
                  <i data-lucide="linkedin" class="h-4 w-4 text-blue-400"></i>
                <% else %>
                  <i data-lucide="twitter" class="h-4 w-4 text-gray-400"></i>
                <% end %>
              </div>
              <div class="flex-1">
                <div class="text-sm font-medium text-gray-300">
                  <%= provider.username || provider.uid %>
                </div>
                <div class="text-xs text-gray-400">
                  <%= platform.titleize %> Account
                </div>
              </div>
            </div>
          </label>
        </div>
      <% end %>
    </div>
  <% else %>
    <div class="text-center py-6 border-2 border-dashed border-blue-500/30 rounded-lg">
      <i data-lucide="user-x" class="h-8 w-8 text-blue-400 mx-auto mb-3"></i>
      <p class="text-gray-400 text-sm mb-3">No <%= platform.titleize %> accounts found</p>
      <p class="text-gray-500 text-xs mb-4">Connect a <%= platform.titleize %> account to auto-publish content</p>
      
      <div class="flex justify-center">
        <% if platform == 'linkedin' %>
          <%= link_to '/auth/linkedin', data: {turbo: false}, class: "px-4 py-2 bg-gradient-to-r from-blue-500 to-blue-600 text-white rounded-lg font-semibold transition-all duration-200 hover:shadow-[0_0_20px_rgba(59,130,246,0.3)] inline-flex items-center" do %>
            <i data-lucide="linkedin" class="h-4 w-4 mr-2"></i>
            Connect LinkedIn
          <% end %>
        <% else %>
          <%= link_to '/auth/twitter2', data: {turbo: false}, class: "px-4 py-2 bg-gradient-to-r from-gray-700 to-gray-800 text-white rounded-lg font-semibold transition-all duration-200 hover:shadow-[0_0_20px_rgba(107,114,128,0.3)] inline-flex items-center" do %>
            <i data-lucide="twitter" class="h-4 w-4 mr-2"></i>
            Connect X
          <% end %>
        <% end %>
      </div>
    </div>
  <% end %>
</div> 