<div class="min-h-screen bg-[#0F172A]">
  <main>
    <section class="py-16 sm:py-24 bg-[#0F172A] text-white relative overflow-hidden">
      <div class="container mx-auto px-4 relative">
        <div class="max-w-2xl mx-auto">
          <div class="bg-[#1E293B]/80 backdrop-blur-sm px-6 py-8 border border-yellow-500/20 rounded-xl shadow-[0_0_30px_rgba(234,179,8,0.1)]">
            <h1 class="font-bold text-2xl text-gray-100 mb-2">
              <%= social_media_content.new_record? ? "Create Social Media Post" : "Edit Social Media Post" %>
            </h1>
            <p class="text-sm text-gray-400 mb-6">Generate an engaging social media post with AI.</p>

            <%= tag.div(flash[:alert], class: "mb-4 text-red-400") if flash[:alert] %>

            <%= form_with model: [:app, social_media_content], class: "space-y-6" do |f| %>
              <!-- Platform (hidden) -->
              <%= f.hidden_field :platform %>

              <!-- Keyword -->
              <div>
                <%= f.label :keyword, "Keyword", class: "block text-sm font-medium text-gray-300 mb-2" %>
                <%= f.text_field :keyword, required: true, placeholder: "e.g., SaaS growth", class: "block w-full px-4 py-3 rounded-lg bg-[#1E293B]/50 border border-yellow-500/30 text-gray-100 placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-yellow-500", value: social_media_content.keyword %>
              </div>

              <!-- CTA URL -->
              <div>
                <%= f.label :cta_url, "CTA URL", class: "block text-sm font-medium text-gray-300 mb-2" %>
                <%= f.url_field :cta_url, required: true, placeholder: "https://yourproduct.com", class: "block w-full px-4 py-3 rounded-lg bg-[#1E293B]/50 border border-yellow-500/30 text-gray-100 placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-yellow-500", value: social_media_content.cta_url %>
              </div>

              <!-- Prompt Selection -->
              <%= render "prompt_selection", prompts: prompts, form: f %>

              <!-- AI Model -->
              <div>
                <label class="block text-sm font-medium text-gray-300 mb-2">AI Model</label>
                <%= f.select :ai_model, grouped_options_for_select(model_groups, social_media_content.ai_model), { include_blank: "Select Model" }, { data: { controller: "choices-select" } } %>
              </div>

              <div class="pt-2">
                <%= f.submit social_media_content.new_record? ? "Generate Post" : "Update Post", class: "px-6 py-3 bg-gradient-to-r from-yellow-500 to-red-500 text-white rounded-md font-semibold hover:shadow-lg" %>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </section>
  </main>
</div> 