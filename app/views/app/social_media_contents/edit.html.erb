<div class="min-h-screen bg-[#0F172A]">
  <main>
    <section class="py-16 sm:py-24 bg-[#0F172A] text-white relative overflow-hidden">
      <div class="container mx-auto px-4 relative">
        <div class="max-w-6xl mx-auto">
          <div class="bg-[#1E293B]/80 backdrop-blur-sm px-6 py-8 border border-yellow-500/20 rounded-xl shadow-[0_0_30px_rgba(234,179,8,0.1)]">
            
            <!-- Header -->
            <div class="flex justify-between items-center mb-8">
              <div>
                <h1 class="font-bold text-3xl text-gray-100">Edit <%= @social_media_content.platform.titleize %> Post</h1>
                <p class="text-base text-gray-400 mt-2">Review and edit your generated content</p>
              </div>
              <%= link_to app_social_media_contents_path, 
                  class: "text-gray-400 hover:text-gray-300 transition-colors" do %>
                <i data-lucide="arrow-left" class="h-4 w-4 inline mr-1"></i>Back to Posts
              <% end %>
            </div>

            <!-- Flash Messages -->
            <% if flash[:alert] %>
              <div class="mb-6 p-4 bg-red-900/20 border border-red-500/30 rounded-lg text-red-400">
                <%= flash[:alert] %>
              </div>
            <% end %>
            
            <% if flash[:notice] %>
              <div class="mb-6 p-4 bg-green-900/20 border border-green-500/30 rounded-lg text-green-400">
                <%= flash[:notice] %>
              </div>
            <% end %>

            <!-- Main Content -->
            <div class="grid grid-cols-1 xl:grid-cols-4 gap-8">
              
              <!-- Content Editor - Takes up 3/4 of the space -->
              <div class="xl:col-span-3">
                <div class="bg-[#0F172A]/50 border border-yellow-500/30 rounded-lg p-6">
                  <div class="flex items-center mb-4">
                    <div class="flex items-center justify-center w-10 h-10 bg-yellow-500/20 border border-yellow-500/30 rounded-lg mr-3">
                      <i data-lucide="edit-3" class="h-5 w-5 text-yellow-400"></i>
                    </div>
                    <div>
                      <h2 class="text-xl font-semibold text-gray-100">Content Editor</h2>
                      <p class="text-sm text-gray-400">Edit your post content below</p>
                    </div>
                  </div>
                  
                  <!-- Form -->
                  <%= form_with model: [:app, @social_media_content], class: "space-y-6" do |f| %>
                    <!-- Content Textarea -->
                    <div>
                      <%= f.text_area :content, 
                          required: true,
                          rows: 12,
                          class: "block w-full px-4 py-4 rounded-lg bg-[#1E293B]/50 border border-yellow-500/30 text-gray-100 placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-yellow-500 focus:border-transparent transition-colors resize-y",
                          placeholder: "Write your #{@social_media_content.platform.titleize} post content..." %>
                    </div>

                    <div class="flex items-center text-sm text-gray-400">
                      <i data-lucide="clock" class="h-4 w-4 mr-2"></i>
                      Last updated <%= time_ago_in_words(@social_media_content.updated_at) %> ago
                    </div>

                    <!-- Actions -->
                    <div class="flex items-center justify-between pt-4">
                      <div class="flex space-x-3">
                        <%= f.submit "Update Post", 
                            class: "px-6 py-3 bg-gradient-to-r from-yellow-500 to-red-500 text-white rounded-md font-semibold transition-all duration-200 hover:shadow-[0_0_20px_rgba(234,179,8,0.3)]" %>
                        <%= link_to "Cancel", app_social_media_contents_path, 
                            class: "px-6 py-3 bg-transparent border-2 border-gray-500/30 rounded-md font-semibold transition-all duration-200 hover:border-gray-500/60 hover:bg-gray-500/10 text-white" %>
                      </div>
                      
                      <div class="flex space-x-3">
                        <!-- Publish Button -->
                        <% unless @social_media_content.status == 'published' %>
                          <button type="button"
                              class="px-4 py-2 bg-purple-600 hover:bg-purple-700 text-white rounded-lg transition-colors text-sm inline-flex items-center"
                              data-controller="modal-opener"
                              data-action="click->modal-opener#open"
                              data-modal-opener-url-value="<%= publish_modal_app_social_media_content_path(@social_media_content) %>">
                            <i data-lucide="send" class="h-4 w-4 inline mr-1"></i>Publish
                          </button>
                        <% else %>
                          <span class="px-4 py-2 bg-green-500/10 border border-green-500/30 rounded-lg text-green-400 text-sm font-medium">
                            <i data-lucide="check-circle" class="h-4 w-4 inline mr-1"></i>Published
                          </span>
                        <% end %>
                        
                        <%= link_to app_social_media_content_path(@social_media_content), 
                            class: "px-4 py-2 bg-blue-600 hover:bg-blue-700 text-white rounded-lg transition-colors text-sm" do %>
                          <i data-lucide="eye" class="h-4 w-4 inline mr-1"></i>Preview
                        <% end %>
                      </div>
                    </div>
                  <% end %>
                </div>
              </div>

              <!-- Sidebar - Takes up 1/4 of the space -->
              <div class="xl:col-span-1 space-y-6">
                
                <!-- Post Information -->
                <div class="bg-[#0F172A]/50 border border-gray-500/30 rounded-lg p-4">
                  <h3 class="text-lg font-semibold text-gray-100 mb-4 flex items-center">
                    <i data-lucide="info" class="h-4 w-4 mr-2 text-gray-400"></i>
                    Post Details
                  </h3>
                  
                  <div class="space-y-4">
                    <div>
                      <label class="block text-xs font-medium text-gray-400 uppercase tracking-wide mb-1">Platform</label>
                      <div class="flex items-center">
                        <span class="px-3 py-1.5 <%= @social_media_content.platform == 'linkedin' ? 'bg-indigo-500/20 border-indigo-500/30 text-indigo-400' : 'bg-sky-500/20 border-sky-500/30 text-sky-400' %> border rounded-full text-sm font-medium">
                          <%= @social_media_content.platform.titleize %>
                        </span>
                      </div>
                    </div>
                    
                    <div>
                      <label class="block text-xs font-medium text-gray-400 uppercase tracking-wide mb-1">Target Keyword</label>
                      <p class="text-sm text-gray-200 bg-[#1E293B]/50 border border-gray-500/30 rounded px-3 py-2"><%= @social_media_content.keyword %></p>
                    </div>
                    
                    <div>
                      <label class="block text-xs font-medium text-gray-400 uppercase tracking-wide mb-1">CTA URL</label>
                      <div class="text-sm text-gray-200 bg-[#1E293B]/50 border border-gray-500/30 rounded px-3 py-2 break-all">
                        <%= link_to @social_media_content.cta_url, @social_media_content.cta_url, 
                            target: "_blank", 
                            class: "text-yellow-400 hover:text-yellow-300 transition-colors" %>
                      </div>
                    </div>
                    
                    <div>
                      <label class="block text-xs font-medium text-gray-400 uppercase tracking-wide mb-1">AI Model</label>
                      <p class="text-sm text-gray-200 bg-[#1E293B]/50 border border-gray-500/30 rounded px-3 py-2"><%= @social_media_content.ai_model %></p>
                    </div>
                    
                    <div>
                      <label class="block text-xs font-medium text-gray-400 uppercase tracking-wide mb-1">Status</label>
                      <span class="px-2 py-1 <%= @social_media_content.status == 'published' ? 'bg-green-500/20 border-green-500/30 text-green-400' : 'bg-gray-500/20 border-gray-500/30 text-gray-400' %> border rounded text-xs font-medium">
                        <%= @social_media_content.status.titleize %>
                      </span>
                    </div>
                  </div>
                </div>

                <!-- Generation Details -->
                <div class="bg-[#0F172A]/50 border border-blue-500/30 rounded-lg p-4">
                  <h3 class="text-lg font-semibold text-gray-100 mb-4 flex items-center">
                    <i data-lucide="cpu" class="h-4 w-4 mr-2 text-blue-400"></i>
                    Generation Info
                  </h3>
                  
                  <div class="space-y-3">
                    <div>
                      <label class="block text-xs font-medium text-blue-400 uppercase tracking-wide mb-1">Created</label>
                      <p class="text-sm text-gray-200"><%= @social_media_content.created_at.strftime("%B %d, %Y at %I:%M %p") %></p>
                    </div>
                    
                    <% if @social_media_content.prompt %>
                      <div>
                        <label class="block text-xs font-medium text-blue-400 uppercase tracking-wide mb-1">AI Prompt Used</label>
                        <div class="text-sm text-gray-200 bg-[#1E293B]/50 border border-blue-500/30 rounded px-3 py-2">
                          <div class="text-xs text-green-400 font-medium mb-1">USER PROMPT</div>
                          <div class="text-xs text-gray-300 mb-2"><%= truncate(@social_media_content.prompt.user_prompt, length: 100) %></div>
                          <div class="text-xs text-purple-400 font-medium mb-1">SYSTEM PROMPT</div>
                          <div class="text-xs text-gray-300"><%= truncate(@social_media_content.prompt.system_prompt, length: 80) %></div>
                        </div>
                      </div>
                    <% end %>
                  </div>
                </div>

                <!-- Quick Actions -->
                <div class="bg-[#0F172A]/50 border border-gray-500/30 rounded-lg p-4">
                  <h3 class="text-lg font-semibold text-gray-100 mb-4 flex items-center">
                    <i data-lucide="zap" class="h-4 w-4 mr-2 text-gray-400"></i>
                    Quick Actions
                  </h3>
                  
                  <div class="space-y-2">
                    <%= link_to app_social_media_content_path(@social_media_content), 
                        class: "flex items-center w-full px-3 py-2 text-sm text-gray-300 hover:text-white hover:bg-gray-500/20 rounded transition-colors" do %>
                      <i data-lucide="eye" class="h-4 w-4 mr-3"></i>
                      View Post
                    <% end %>
                    
                    <%= link_to app_social_media_contents_path, 
                        class: "flex items-center w-full px-3 py-2 text-sm text-gray-300 hover:text-white hover:bg-gray-500/20 rounded transition-colors" do %>
                      <i data-lucide="list" class="h-4 w-4 mr-3"></i>
                      All Posts
                    <% end %>
                    
                    <%= button_to app_social_media_content_path(@social_media_content), 
                        method: :delete,
                        class: "flex items-center w-full px-3 py-2 text-sm text-red-400 hover:text-red-300 hover:bg-red-500/10 rounded transition-colors border-0 bg-transparent cursor-pointer",
                        data: { confirm: "Are you sure you want to delete this post?" } do %>
                      <i data-lucide="trash-2" class="h-4 w-4 mr-3"></i>
                      Delete Post
                    <% end %>
                  </div>
                </div>

              </div>
            </div>
          </div>
        </div>
      </div>
    </section>
  </main>
</div>

<script>
// Initialize Lucide icons
if (window.lucide) lucide.createIcons();
</script> 