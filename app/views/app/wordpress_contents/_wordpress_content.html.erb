<tr class="border-b border-yellow-500/10 hover:bg-[#0F172A]/30 transition-colors" id="wordpress_content_<%= wordpress_content.id %>">
  <td class="py-4 px-4 font-medium text-gray-100">
    <div class="max-w-xs">
      <h3 class="font-semibold truncate"><%= wordpress_content.title %></h3>
      <% if wordpress_content.content %>
        <p class="text-sm text-gray-400 truncate mt-1">
          <%= truncate(strip_tags(wordpress_content.content), length: 60) %>
        </p>
      <% else %>
        <div class="flex justify-center items-center">
          <div class="w-8 h-8 border-4 border-blue-500 border-t-transparent rounded-full animate-spin"></div>
        </div>
      <% end %>
    </div>
  </td>
  <td class="py-4 px-4">
    <% if wordpress_content.status == 'publish' %>
      <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-900/50 text-green-300 border border-green-600/50">
        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" data-lucide="check-circle" class="lucide lucide-check-circle h-3 w-3 inline mr-1"><path d="M21.801 10A10 10 0 1 1 17 3.335"></path><path d="m9 11 3 3L22 4"></path></svg>Published
      </span>
    <% else %>
      <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-yellow-900/50 text-yellow-300 border border-yellow-600/50">
        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" data-lucide="edit-3" class="lucide lucide-edit-3 h-3 w-3 inline mr-1"><path d="M12 20h9"></path><path d="M16.376 3.622a1 1 0 0 1 3.002 3.002L7.368 18.635a2 2 0 0 1-.855.506l-2.872.838a.5.5 0 0 1-.62-.62l.838-2.872a2 2 0 0 1 .506-.854z"></path></svg>Draft
      </span>
    <% end %>
  </td>
  <td class="py-4 px-4 text-gray-400">
    <%= wordpress_content.content ? wordpress_content.content.split.size : 0 %> words
  </td>
  <td class="py-4 px-4 text-gray-400">
    <%= wordpress_content.created_at.strftime("%B %d, %Y") %>
  </td>
  <td class="py-4 px-4">
    <% if wordpress_content.content %>
      <div class="flex space-x-3">
        <%= link_to app_wordpress_content_path(wordpress_content), 
            class: "text-blue-400 hover:text-blue-300 transition-colors", 
            title: "View" do %>
          <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" data-lucide="eye" class="lucide lucide-eye h-4 w-4"><path d="M2.062 12.348a1 1 0 0 1 0-.696 10.75 10.75 0 0 1 19.876 0 1 1 0 0 1 0 .696 10.75 10.75 0 0 1-19.876 0"></path><circle cx="12" cy="12" r="3"></circle></svg>
        <% end %>
        <%= link_to edit_app_wordpress_content_path(wordpress_content), 
            class: "text-yellow-400 hover:text-yellow-300 transition-colors", 
            title: "Edit" do %>
          <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" data-lucide="edit-3" class="lucide lucide-edit-3 h-4 w-4"><path d="M12 20h9"></path><path d="M16.376 3.622a1 1 0 0 1 3.002 3.002L7.368 18.635a2 2 0 0 1-.855.506l-2.872.838a.5.5 0 0 1-.62-.62l.838-2.872a2 2 0 0 1 .506-.854z"></path></svg>
        <% end %>
        <% if wordpress_content.status == 'draft' %>
          <%= button_tag type: "button",
              class: "text-purple-400 hover:text-purple-300 transition-colors", 
              title: "Publish to WordPress",
              data: {
                controller: "modal-opener",
                action: "click->modal-opener#open",
                "modal-opener-url-value": publish_modal_app_wordpress_content_path(wordpress_content)
              } do %>
            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" data-lucide="send" class="lucide lucide-send h-4 w-4"><path d="M14.536 21.686a.5.5 0 0 0 .937-.024l6.5-19a.496.496 0 0 0-.635-.635l-19 6.5a.5.5 0 0 0-.024.937l7.93 3.18a2 2 0 0 1 1.112 1.11z"></path><path d="m21.854 2.147-10.94 10.939"></path></svg>
          <% end %>
        <% end %>
        <%= link_to app_wordpress_content_path(wordpress_content), 
            method: :delete,
            class: "text-red-400 hover:text-red-300 transition-colors", 
            title: "Delete",
            data: { 
              confirm: "Are you sure you want to delete this content? This action cannot be undone.",
              turbo_method: :delete
            } do %>
          <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" data-lucide="trash-2" class="lucide lucide-trash-2 h-4 w-4"><path d="M3 6h18"></path><path d="M19 6v14c0 1-1 2-2 2H7c-1 0-2-1-2-2V6"></path><path d="M8 6V4c0-1 1-2 2-2h4c1 0 2 1 2 2v2"></path><line x1="10" x2="10" y1="11" y2="17"></line><line x1="14" x2="14" y1="11" y2="17"></line></svg>
        <% end %>
      </div>
    <% end %>
  </td>
</tr>