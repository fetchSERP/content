<div class="min-h-screen bg-[#0F172A]">
  <main>
    <!-- WordPress Content Details Section -->
    <section class="py-16 sm:py-24 bg-[#0F172A] text-white relative overflow-hidden">
      <div class="container mx-auto px-4 relative">
        <div class="max-w-4xl mx-auto">
          <div class="bg-[#1E293B]/80 backdrop-blur-sm px-6 py-8 border border-yellow-500/20 rounded-xl shadow-[0_0_30px_rgba(234,179,8,0.1)]">
            <!-- Header -->
            <div class="flex justify-between items-start mb-6">
              <div>
                <h1 class="text-3xl font-bold text-gray-100"><%= @wordpress_content.title %></h1>
                <div class="flex items-center space-x-4 text-sm text-gray-400">
                  <span><i data-lucide="calendar" class="h-4 w-4 inline mr-1"></i>Created <%= @wordpress_content.created_at.strftime("%B %d, %Y") %></span>
                  <span><i data-lucide="type" class="h-4 w-4 inline mr-1"></i><%= @wordpress_content.content ? @wordpress_content.content.split.size : 0 %> words</span>
                  <% if @wordpress_content.keyword.present? %>
                    <span><i data-lucide="target" class="h-4 w-4 inline mr-1"></i><%= @wordpress_content.keyword %></span>
                  <% end %>
                </div>
              </div>
              
              <!-- Action Buttons -->
              <div class="flex space-x-3">
                <%= link_to edit_app_wordpress_content_path(@wordpress_content), 
                    class: "px-4 py-2 bg-yellow-600 hover:bg-yellow-700 text-white rounded-lg transition-colors text-sm" do %>
                  <i data-lucide="edit-3" class="h-4 w-4 inline mr-1"></i>Edit
                <% end %>
                
                <% if @wordpress_content.status == 'draft' %>
                  <button type="button"
                      class="px-4 py-2 bg-purple-600 hover:bg-purple-700 text-white rounded-lg transition-colors text-sm inline-flex items-center"
                      data-controller="modal-opener"
                      data-action="click->modal-opener#open"
                      data-modal-opener-url-value="<%= publish_modal_app_wordpress_content_path(@wordpress_content) %>">
                    <i data-lucide="send" class="h-4 w-4 inline mr-1"></i>Publish
                  </button>
                <% end %>
                
                <%= link_to app_wordpress_contents_path, 
                    class: "px-4 py-2 bg-gray-600 hover:bg-gray-700 text-white rounded-lg transition-colors text-sm" do %>
                  <i data-lucide="arrow-left" class="h-4 w-4 inline mr-1"></i>Back
                <% end %>
              </div>
            </div>

            <!-- Flash Messages -->
            <div id="flash">
              <%= render "shared/flash" if flash[:notice] || flash[:alert] %>
            </div>

            <!-- Content Metadata -->
            <% if @wordpress_content.keyword.present? || @wordpress_content.cta_url.present? %>
              <div class="grid grid-cols-1 md:grid-cols-2 gap-4 mb-6">
                <% if @wordpress_content.keyword.present? %>
                  <div class="bg-[#1E293B]/60 border border-yellow-500/30 rounded-lg p-4">
                    <h3 class="text-sm font-medium text-gray-300 mb-2">Target Keyword</h3>
                    <div class="px-3 py-2 bg-blue-500/20 border border-blue-500/30 rounded text-blue-300 text-sm">
                      <%= @wordpress_content.keyword %>
                    </div>
                  </div>
                <% end %>
                
                <% if @wordpress_content.cta_url.present? %>
                  <div class="bg-[#1E293B]/60 border border-yellow-500/30 rounded-lg p-4">
                    <h3 class="text-sm font-medium text-gray-300 mb-2">Call-to-Action URL</h3>
                    <div class="px-3 py-2 bg-purple-500/20 border border-purple-500/30 rounded text-purple-300 text-sm break-all">
                      <%= link_to @wordpress_content.cta_url, @wordpress_content.cta_url, target: "_blank", class: "hover:underline" %>
                    </div>
                  </div>
                <% end %>
              </div>
            <% end %>

            <!-- Associated Prompt -->
            <% if @wordpress_content.prompt.present? %>
              <div class="bg-[#1E293B]/60 border border-yellow-500/30 rounded-lg p-4 mb-6">
                <h3 class="text-sm font-medium text-gray-300 mb-3">
                  <i data-lucide="message-square" class="h-4 w-4 inline mr-1"></i>
                  Associated Prompt
                </h3>
                <div class="space-y-3">
                  <div>
                    <div class="text-xs text-green-400 font-medium mb-1">USER PROMPT</div>
                    <div class="text-sm text-gray-300 bg-[#0F172A]/50 rounded p-3 border border-yellow-500/20">
                      <%= simple_format(@wordpress_content.prompt.user_prompt) %>
                    </div>
                  </div>
                  <div>
                    <div class="text-xs text-purple-400 font-medium mb-1">SYSTEM PROMPT</div>
                    <div class="text-sm text-gray-300 bg-[#0F172A]/50 rounded p-3 border border-yellow-500/20">
                      <%= simple_format(@wordpress_content.prompt.system_prompt) %>
                    </div>
                  </div>
                </div>
              </div>
            <% end %>

            <!-- Content Display -->
            <div class="bg-[#1E293B]/60 border border-yellow-500/30 rounded-lg p-6">
              <h3 class="text-sm font-medium text-gray-300 mb-4">
                <i data-lucide="file-text" class="h-4 w-4 inline mr-1"></i>
                Generated Content
              </h3>
              
              <% if @wordpress_content.content.present? %>
                <div class="prose prose-invert prose-blue max-w-none">
                  <div class="text-gray-200 leading-relaxed whitespace-pre-wrap">
                    <%= simple_format(@wordpress_content.content) %>
                  </div>
                </div>
              <% else %>
                <div class="text-center py-8">
                  <i data-lucide="file-x" class="h-8 w-8 text-gray-400 mx-auto mb-2"></i>
                  <p class="text-gray-400 text-sm">No content generated yet</p>
                </div>
              <% end %>
            </div>

            <div class="mt-8 text-center">
              <%= link_to "Back to Content List", app_wordpress_contents_path, class: "text-gray-400 hover:text-gray-300 transition-colors" %>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Content Analytics (Future Feature) -->
    <section class="pb-16 bg-[#0F172A]">
      <div class="container mx-auto px-4">
        <div class="max-w-4xl mx-auto">
          <div class="bg-[#1E293B]/80 backdrop-blur-sm px-6 py-6 border border-yellow-500/20 rounded-xl shadow-[0_0_30px_rgba(234,179,8,0.1)]">
            <h3 class="font-semibold text-gray-100 mb-4 flex items-center">
              <i data-lucide="bar-chart-3" class="h-5 w-5 text-yellow-400 mr-2"></i>
              Content Analytics
            </h3>
            <div class="grid grid-cols-1 md:grid-cols-4 gap-6 text-center">
              <div>
                <div class="text-2xl font-bold text-gray-400 mb-1">-</div>
                <p class="text-gray-500 text-sm">Views</p>
              </div>
              <div>
                <div class="text-2xl font-bold text-gray-400 mb-1">-</div>
                <p class="text-gray-500 text-sm">Engagements</p>
              </div>
              <div>
                <div class="text-2xl font-bold text-gray-400 mb-1">-</div>
                <p class="text-gray-500 text-sm">SEO Score</p>
              </div>
              <div>
                <div class="text-2xl font-bold text-gray-400 mb-1">-</div>
                <p class="text-gray-500 text-sm">Conversions</p>
              </div>
            </div>
            <div class="mt-4 text-center">
              <span class="px-3 py-1 bg-gray-600/30 rounded-full text-xs text-gray-500">
                Analytics coming soon
              </span>
            </div>
          </div>
        </div>
      </div>
    </section>
  </main>
</div> 