<div class="min-h-screen bg-[#0F172A]">
  <main>
    <section class="py-8 sm:py-12 bg-[#0F172A] text-white relative overflow-hidden">
      <div class="container mx-auto px-4 relative">
        <div class="max-w-4xl mx-auto">
          
          <!-- Header -->
          <div class="mb-8">
            <div class="flex items-center justify-between">
              <div class="flex items-center space-x-4">
                <%= link_to app_wordpress_contents_path, 
                    class: "flex items-center justify-center w-10 h-10 bg-gray-700/50 hover:bg-gray-600/50 border border-gray-600/50 rounded-lg transition-colors" do %>
                  <i data-lucide="arrow-left" class="h-4 w-4 text-gray-400"></i>
                <% end %>
                <div>
                  <h1 class="font-bold text-3xl text-gray-100"><%= @wordpress_content.title %></h1>
                  <div class="flex items-center space-x-4 text-sm text-gray-400 mt-1">
                    <span><i data-lucide="calendar" class="h-4 w-4 inline mr-1"></i>Created <%= @wordpress_content.created_at.strftime("%B %d, %Y") %></span>
                    <span><i data-lucide="type" class="h-4 w-4 inline mr-1"></i><%= @wordpress_content.content ? @wordpress_content.content.split.size : 0 %> words</span>
                    <% if @wordpress_content.keyword.present? %>
                      <span><i data-lucide="target" class="h-4 w-4 inline mr-1"></i><%= @wordpress_content.keyword %></span>
                    <% end %>
                  </div>
                </div>
              </div>
              
              <!-- Action Buttons -->
              <div class="flex space-x-3">
                <%= link_to edit_app_wordpress_content_path(@wordpress_content), 
                    class: "px-4 py-2 bg-gradient-to-r from-yellow-500 to-orange-500 hover:from-yellow-600 hover:to-orange-600 text-white rounded-lg transition-all duration-200 text-sm font-medium inline-flex items-center shadow-lg hover:shadow-xl" do %>
                  <i data-lucide="edit-3" class="h-4 w-4 mr-2"></i>Edit
                <% end %>
                
                <% if @wordpress_content.status == 'draft' %>
                  <button type="button"
                      class="px-4 py-2 bg-gradient-to-r from-purple-500 to-indigo-500 hover:from-purple-600 hover:to-indigo-600 text-white rounded-lg transition-all duration-200 text-sm font-medium inline-flex items-center shadow-lg hover:shadow-xl"
                      data-controller="modal-opener"
                      data-action="click->modal-opener#open"
                      data-modal-opener-url-value="<%= publish_modal_app_wordpress_content_path(@wordpress_content) %>">
                    <i data-lucide="send" class="h-4 w-4 mr-2"></i>Publish
                  </button>
                <% end %>
              </div>
            </div>
          </div>

          <!-- Flash Messages -->
          <% if flash[:alert] || flash[:notice] %>
            <div class="mb-6">
              <% if flash[:alert] %>
                <div class="p-4 bg-red-500/10 border border-red-500/30 rounded-lg text-red-400 mb-4">
                  <div class="flex items-center">
                    <i data-lucide="alert-circle" class="h-4 w-4 mr-2 flex-shrink-0"></i>
                    <%= flash[:alert] %>
                  </div>
                </div>
              <% end %>
              
              <% if flash[:notice] %>
                <div class="p-4 bg-green-500/10 border border-green-500/30 rounded-lg text-green-400">
                  <div class="flex items-center">
                    <i data-lucide="check-circle" class="h-4 w-4 mr-2 flex-shrink-0"></i>
                    <%= flash[:notice] %>
                  </div>
                </div>
              <% end %>
            </div>
          <% end %>

          <div class="space-y-6">
            <!-- Content Metadata -->
            <% if @wordpress_content.keyword.present? || @wordpress_content.cta_url.present? %>
              <div class="bg-[#1E293B]/80 backdrop-blur-sm border border-yellow-500/20 rounded-xl shadow-[0_0_30px_rgba(234,179,8,0.1)] overflow-hidden">
                <div class="bg-gradient-to-r from-blue-500/10 via-purple-500/10 to-cyan-500/10 border-b border-yellow-500/20 px-6 py-4">
                  <div class="flex items-center">
                    <div class="flex items-center justify-center w-8 h-8 bg-blue-500/20 border border-blue-500/30 rounded-lg mr-3">
                      <i data-lucide="info" class="h-4 w-4 text-blue-400"></i>
                    </div>
                    <div>
                      <h2 class="text-lg font-semibold text-gray-100">Content Metadata</h2>
                      <p class="text-sm text-gray-400">Key information about this content</p>
                    </div>
                  </div>
                </div>
                
                <div class="p-6">
                  <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                    <% if @wordpress_content.keyword.present? %>
                      <div class="bg-[#0F172A]/70 border border-yellow-500/30 rounded-lg p-4">
                        <h3 class="text-sm font-medium text-gray-300 mb-2 flex items-center">
                          <i data-lucide="target" class="h-4 w-4 mr-1 text-blue-400"></i>
                          Target Keyword
                        </h3>
                        <div class="px-3 py-2 bg-blue-500/20 border border-blue-500/30 rounded text-blue-300 text-sm">
                          <%= @wordpress_content.keyword %>
                        </div>
                      </div>
                    <% end %>
                    
                    <% if @wordpress_content.cta_url.present? %>
                      <div class="bg-[#0F172A]/70 border border-yellow-500/30 rounded-lg p-4">
                        <h3 class="text-sm font-medium text-gray-300 mb-2 flex items-center">
                          <i data-lucide="external-link" class="h-4 w-4 mr-1 text-purple-400"></i>
                          Call-to-Action URL
                        </h3>
                        <div class="px-3 py-2 bg-purple-500/20 border border-purple-500/30 rounded text-purple-300 text-sm break-all">
                          <%= link_to @wordpress_content.cta_url, target: "_blank", class: "hover:underline inline-flex items-center" do %>
                            <%= @wordpress_content.cta_url %>
                            <i data-lucide="external-link" class="h-3 w-3 ml-1"></i>
                          <% end %>
                        </div>
                      </div>
                    <% end %>
                  </div>
                </div>
              </div>
            <% end %>

            <!-- Associated Prompt -->
            <% if @wordpress_content.prompt.present? %>
              <div class="bg-[#1E293B]/80 backdrop-blur-sm border border-yellow-500/20 rounded-xl shadow-[0_0_30px_rgba(234,179,8,0.1)] overflow-hidden">
                <div class="bg-gradient-to-r from-green-500/10 via-teal-500/10 to-blue-500/10 border-b border-yellow-500/20 px-6 py-4">
                  <div class="flex items-center">
                    <div class="flex items-center justify-center w-8 h-8 bg-green-500/20 border border-green-500/30 rounded-lg mr-3">
                      <i data-lucide="message-square" class="h-4 w-4 text-green-400"></i>
                    </div>
                    <div>
                      <h2 class="text-lg font-semibold text-gray-100">Associated AI Prompt</h2>
                      <p class="text-sm text-gray-400">The prompts used to generate this content</p>
                    </div>
                  </div>
                </div>

                <div class="p-6">
                  <div class="space-y-4">
                    <div>
                      <div class="text-xs text-green-400 font-medium mb-2 flex items-center">
                        <i data-lucide="user" class="h-3 w-3 mr-1"></i>
                        USER PROMPT
                      </div>
                      <div class="text-sm text-gray-300 bg-[#0F172A]/50 rounded-lg p-4 border border-yellow-500/20">
                        <%= simple_format(@wordpress_content.prompt.user_prompt) %>
                      </div>
                    </div>
                    <div>
                      <div class="text-xs text-purple-400 font-medium mb-2 flex items-center">
                        <i data-lucide="cpu" class="h-3 w-3 mr-1"></i>
                        SYSTEM PROMPT
                      </div>
                      <div class="text-sm text-gray-300 bg-[#0F172A]/50 rounded-lg p-4 border border-yellow-500/20">
                        <%= simple_format(@wordpress_content.prompt.system_prompt) %>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            <% end %>

            <!-- Generated Content -->
            <div class="bg-[#1E293B]/80 backdrop-blur-sm border border-yellow-500/20 rounded-xl shadow-[0_0_30px_rgba(234,179,8,0.1)] overflow-hidden">
              <div class="bg-gradient-to-r from-yellow-500/10 via-orange-500/10 to-red-500/10 border-b border-yellow-500/20 px-6 py-4">
                <div class="flex items-center justify-between">
                  <div class="flex items-center">
                    <div class="flex items-center justify-center w-8 h-8 bg-yellow-500/20 border border-yellow-500/30 rounded-lg mr-3">
                      <i data-lucide="file-text" class="h-4 w-4 text-yellow-400"></i>
                    </div>
                    <div>
                      <h2 class="text-lg font-semibold text-gray-100">Generated Content</h2>
                      <p class="text-sm text-gray-400">The AI-generated WordPress content</p>
                    </div>
                  </div>
                  
                  <% if @wordpress_content.content.present? %>
                    <div class="flex items-center space-x-2 text-sm text-gray-400">
                      <i data-lucide="file-text" class="h-4 w-4"></i>
                      <span><%= @wordpress_content.content.split.size %> words</span>
                    </div>
                  <% end %>
                </div>
              </div>
              
              <div class="p-6">
                <% if @wordpress_content.content.present? %>
                  <div class="prose prose-invert prose-blue max-w-none">
                    <div class="text-gray-200 leading-relaxed whitespace-pre-wrap bg-[#0F172A]/50 rounded-lg p-6 border border-yellow-500/20">
                      <%= simple_format(@wordpress_content.content) %>
                    </div>
                  </div>
                <% else %>
                  <div class="text-center py-12">
                    <i data-lucide="file-x" class="h-12 w-12 text-gray-400 mx-auto mb-4"></i>
                    <p class="text-gray-400 text-lg font-medium">No content generated yet</p>
                    <p class="text-gray-500 text-sm mt-1">Generate content to see it displayed here</p>
                  </div>
                <% end %>
              </div>
            </div>

            <!-- Content Analytics -->
            <div class="bg-[#1E293B]/80 backdrop-blur-sm border border-yellow-500/20 rounded-xl shadow-[0_0_30px_rgba(234,179,8,0.1)] overflow-hidden">
              <div class="bg-gradient-to-r from-indigo-500/10 via-purple-500/10 to-pink-500/10 border-b border-yellow-500/20 px-6 py-4">
                <div class="flex items-center">
                  <div class="flex items-center justify-center w-8 h-8 bg-indigo-500/20 border border-indigo-500/30 rounded-lg mr-3">
                    <i data-lucide="bar-chart-3" class="h-4 w-4 text-indigo-400"></i>
                  </div>
                  <div>
                    <h2 class="text-lg font-semibold text-gray-100">Content Analytics</h2>
                    <p class="text-sm text-gray-400">Performance metrics and insights</p>
                  </div>
                </div>
              </div>

              <div class="p-6">
                <div class="grid grid-cols-1 md:grid-cols-4 gap-6 text-center">
                  <div class="bg-[#0F172A]/50 rounded-lg p-4 border border-gray-600/30">
                    <div class="text-3xl font-bold text-gray-400 mb-2">-</div>
                    <p class="text-gray-500 text-sm font-medium">Views</p>
                  </div>
                  <div class="bg-[#0F172A]/50 rounded-lg p-4 border border-gray-600/30">
                    <div class="text-3xl font-bold text-gray-400 mb-2">-</div>
                    <p class="text-gray-500 text-sm font-medium">Engagements</p>
                  </div>
                  <div class="bg-[#0F172A]/50 rounded-lg p-4 border border-gray-600/30">
                    <div class="text-3xl font-bold text-gray-400 mb-2">-</div>
                    <p class="text-gray-500 text-sm font-medium">SEO Score</p>
                  </div>
                  <div class="bg-[#0F172A]/50 rounded-lg p-4 border border-gray-600/30">
                    <div class="text-3xl font-bold text-gray-400 mb-2">-</div>
                    <p class="text-gray-500 text-sm font-medium">Conversions</p>
                  </div>
                </div>
                <div class="mt-6 text-center">
                  <span class="px-4 py-2 bg-gradient-to-r from-gray-600/30 to-gray-700/30 border border-gray-600/30 rounded-full text-sm text-gray-400 font-medium">
                    <i data-lucide="clock" class="h-4 w-4 inline mr-1"></i>
                    Analytics coming soon
                  </span>
                </div>
              </div>
            </div>

            <!-- Navigation -->
            <div class="bg-[#1E293B]/80 backdrop-blur-sm border border-gray-500/20 rounded-xl p-6">
              <div class="flex items-center justify-center">
                <%= link_to app_wordpress_contents_path, 
                    class: "px-6 py-3 bg-gradient-to-r from-gray-600 to-gray-700 hover:from-gray-700 hover:to-gray-800 text-white rounded-lg transition-all duration-200 text-sm font-medium inline-flex items-center shadow-lg hover:shadow-xl" do %>
                  <i data-lucide="list" class="h-4 w-4 mr-2"></i>Back to Content List
                <% end %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>
  </main>
</div>

<script>
// Initialize Lucide icons
if (window.lucide) lucide.createIcons();

// Re-initialize Lucide icons after any dynamic content updates
document.addEventListener('turbo:frame-load', function() {
  if (window.lucide) {
    lucide.createIcons();
  }
});
</script> 