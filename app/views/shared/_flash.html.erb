<% if notice %>
  <div class="mb-4 p-4 bg-green-900/20 border border-green-500/30 rounded-lg">
    <div class="flex items-center">
      <i data-lucide="check-circle" class="h-5 w-5 text-green-400 mr-3 flex-shrink-0"></i>
      <p class="text-green-300"><%= notice %></p>
    </div>
  </div>
<% end %>

<% if alert %>
  <div class="mb-4 p-4 bg-red-900/20 border border-red-500/30 rounded-lg">
    <div class="flex items-center">
      <i data-lucide="alert-triangle" class="h-5 w-5 text-red-400 mr-3 flex-shrink-0"></i>
      <p class="text-red-300"><%= alert %></p>
    </div>
  </div>
<% end %> 