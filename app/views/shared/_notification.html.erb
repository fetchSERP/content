<div id="notification-<%= rand(1000000) %>" 
     class="fixed top-4 right-4 max-w-sm w-full transform translate-x-full opacity-0 transition-all duration-300 ease-in-out z-50"
     data-controller="notification"
     data-notification-type-value="<%= type %>"
     data-notification-message-value="<%= message %>"
     data-notification-duration-value="<%= duration || 5000 %>">
  
  <div class="<%= notification_classes(type) %> rounded-lg shadow-lg border backdrop-blur-sm p-4">
    <div class="flex items-start">
      <div class="flex-shrink-0">
        <%= notification_icon(type) %>
      </div>
      
      <div class="ml-3 flex-1">
        <p class="text-sm font-medium text-gray-100">
          <%= message %>
        </p>
      </div>
      
      <div class="ml-4 flex-shrink-0">
        <button type="button" 
                class="rounded-md text-gray-400 hover:text-gray-300 focus:outline-none"
                data-action="click->notification#dismiss">
          <i data-lucide="x" class="h-4 w-4"></i>
        </button>
      </div>
    </div>
  </div>
</div>

<script>
// Initialize Lucide icons for the notification
if (window.lucide) window.lucide.createIcons();
</script> 